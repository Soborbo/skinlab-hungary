---
import BaseLayout from './BaseLayout.astro';
import ROICalculator from '../components/product/ROICalculator.astro';
import StatsBar from '../components/product/StatsBar.astro';
import ProductFAQ from '../components/product/ProductFAQ.astro';
import WhatsIncluded from '../components/product/WhatsIncluded.astro';
import VideoDemo from '../components/product/VideoDemo.astro';
import TechSpecs from '../components/product/TechSpecs.astro';
import Testimonials from '../components/product/Testimonials.astro';
import ExpertQuote from '../components/product/ExpertQuote.astro';
import RelatedProducts from '../components/product/RelatedProducts.astro';
// Schema components
import BreadcrumbSchema from '../components/schema/BreadcrumbSchema.astro';
import FAQSchema from '../components/schema/FAQSchema.astro';
import { SITE, CONTACT, TRUST_BADGES, CATEGORIES } from '../lib/constants';

interface Variant {
  sku: string;
  name: string;
  value: string;
  price: number | null;
  image?: string;
}

interface Stat {
  value: string;
  unit?: string;
  label: string;
  icon?: string;
}

interface FAQItem {
  question: string;
  answer: string;
}

interface Props {
  product: {
    name: string;
    sku: string;
    slug: string;
    categorySlug: string;
    description: string;
    shortDescription: string;
    price: number | null;
    image: string;
    gallery: string[];
    youtubeVideos?: string[];
    availability: 'in_stock' | 'preorder' | 'out_of_stock';
    hasVariants: boolean;
    variants: Variant[];
    featured?: boolean;
    metaTitle?: string;
    metaDescription?: string;
    stats?: Stat[];
    faq?: FAQItem[];
    whatsIncluded?: string[];
    specs?: Record<string, string>;
  };
}

const { product } = Astro.props;

// Find category info
const category = CATEGORIES.find(c => c.slug === product.categorySlug);
const categoryName = category?.nameShort || product.categorySlug;

// Format price
const formatPrice = (price: number | null) => {
  if (!price) return null;
  return new Intl.NumberFormat('hu-HU').format(price) + ' Ft';
};

// Availability info
const availabilityInfo = {
  in_stock: { label: 'Raktáron', color: 'success', icon: 'check' },
  preorder: { label: 'Előrendelhető', color: 'amber', icon: 'clock' },
  out_of_stock: { label: 'Nem elérhető', color: 'gray', icon: 'x' },
};
const availability = availabilityInfo[product.availability];

// Page URL
const pageUrl = `${SITE.url}/${product.categorySlug}/${product.slug}`;

// Breadcrumb items for schema
const breadcrumbItems = [
  { name: 'Főoldal', url: SITE.url },
  { name: categoryName, url: `${SITE.url}/${product.categorySlug}` },
  { name: product.name }
];

// FAQ questions for schema (if available)
const faqQuestions = product.faq?.map(item => ({
  question: item.question,
  answer: item.answer
})) || [];

// Product schema (kept inline because ProductSchema component requires price)
const productSchema = product.price ? {
  "@context": "https://schema.org",
  "@type": "Product",
  "@id": `${pageUrl}#product`,
  "name": product.name,
  "description": product.shortDescription || product.description?.slice(0, 200),
  "sku": product.sku,
  "brand": { "@type": "Brand", "name": "SkinLab" },
  "image": product.image ? [`${SITE.url}/${product.image.replace('@assets/', 'assets/')}`] : [],
  "offers": {
    "@type": "Offer",
    "url": pageUrl,
    "priceCurrency": "HUF",
    "price": String(product.price),
    "availability": product.availability === 'in_stock'
      ? "https://schema.org/InStock"
      : product.availability === 'preorder'
        ? "https://schema.org/PreOrder"
        : "https://schema.org/OutOfStock",
    "seller": { "@type": "Organization", "@id": `${SITE.url}#organization`, "name": "SkinLab Hungary" },
    "hasMerchantReturnPolicy": {
      "@type": "MerchantReturnPolicy",
      "returnPolicyCategory": "https://schema.org/MerchantReturnFiniteReturnWindow",
      "merchantReturnDays": 14,
      "returnMethod": "https://schema.org/ReturnByMail"
    },
    "shippingDetails": {
      "@type": "OfferShippingDetails",
      "shippingRate": {
        "@type": "MonetaryAmount",
        "value": "0",
        "currency": "HUF"
      },
      "shippingDestination": {
        "@type": "DefinedRegion",
        "addressCountry": "HU"
      },
      "deliveryTime": {
        "@type": "ShippingDeliveryTime",
        "handlingTime": {
          "@type": "QuantitativeValue",
          "minValue": 1,
          "maxValue": 3,
          "unitCode": "DAY"
        },
        "transitTime": {
          "@type": "QuantitativeValue",
          "minValue": 10,
          "maxValue": 20,
          "unitCode": "DAY"
        }
      }
    }
  }
} : null;

// Trust badge icons
const icons: Record<string, string> = {
  'shield-check': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />`,
  'truck': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0" />`,
  'graduation-cap': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222" />`,
  'wrench': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />`,
};

// All images for gallery
const allImages = [
  product.image,
  ...product.gallery
].filter(Boolean);
---

<BaseLayout
  title={product.metaTitle || product.name}
  description={product.metaDescription || product.shortDescription || product.description?.slice(0, 160)}
  schema={productSchema}
>
  <!-- Schema.org Structured Data -->
  <BreadcrumbSchema items={breadcrumbItems} currentUrl={pageUrl} />
  {faqQuestions.length > 0 && <FAQSchema url={pageUrl} questions={faqQuestions} />}

  <div id="main-content">

    <!-- Breadcrumb -->
    <nav class="bg-gray-100 border-b" aria-label="Breadcrumb">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-3">
        <ol class="flex items-center gap-2 text-sm">
          <li>
            <a href="/" class="text-gray-500 hover:text-primary-600">Főoldal</a>
          </li>
          <li class="text-gray-400">›</li>
          <li>
            <a href={`/${product.categorySlug}`} class="text-gray-500 hover:text-primary-600">{categoryName}</a>
          </li>
          <li class="text-gray-400">›</li>
          <li class="text-gray-900 font-medium truncate max-w-[200px]">{product.name}</li>
        </ol>
      </div>
    </nav>

    <!-- HERO SECTION -->
    <section class="bg-white py-8 lg:py-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-10 lg:gap-16">

          <!-- Media Gallery -->
          <div class="space-y-4">
            <!-- Main Image -->
            <div class="relative aspect-square bg-gradient-to-br from-gray-100 to-gray-200 rounded-2xl overflow-hidden" id="main-image-container">
              {allImages.length > 0 ? (
                <img
                  id="main-image"
                  src={allImages[0].startsWith('/') ? allImages[0] : `/${allImages[0]}`}
                  alt={product.name}
                  class="w-full h-full object-contain p-4"
                />
              ) : (
                <div class="absolute inset-0 flex items-center justify-center">
                  <div class="text-center p-8">
                    <div class="w-20 h-20 mx-auto mb-4 rounded-2xl bg-white shadow-lg flex items-center justify-center">
                      <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                    </div>
                    <p class="text-gray-500 font-medium">Kép hamarosan</p>
                  </div>
                </div>
              )}

              {/* Badges */}
              <div class="absolute top-4 left-4 flex flex-col gap-2">
                {product.featured && (
                  <span class="bg-red-500 text-white text-xs font-bold px-3 py-1 rounded-full">BESTSELLER</span>
                )}
                {product.hasVariants && (
                  <span class="bg-purple-500 text-white text-xs font-bold px-3 py-1 rounded-full">
                    {product.variants.length} variáció
                  </span>
                )}
              </div>
            </div>

            <!-- Thumbnails -->
            {allImages.length > 1 && (
              <div class="grid grid-cols-5 gap-2">
                {allImages.slice(0, 5).map((img, i) => (
                  <button
                    type="button"
                    class={`aspect-square rounded-lg overflow-hidden bg-gray-100 cursor-pointer hover:ring-2 hover:ring-primary-400 transition-all ${i === 0 ? 'ring-2 ring-primary-600' : ''}`}
                    data-thumbnail={i}
                    data-src={img.startsWith('/') ? img : `/${img}`}
                  >
                    <img
                      src={img.startsWith('/') ? img : `/${img}`}
                      alt={`${product.name} - kép ${i + 1}`}
                      class="w-full h-full object-cover"
                    />
                  </button>
                ))}
              </div>
            )}
          </div>

          <!-- Product Info -->
          <div>
            <!-- Availability Badge -->
            <div class={`inline-flex items-center gap-2 px-3 py-1 rounded-full text-sm font-medium mb-4 ${
              availability.color === 'success' ? 'bg-success-50 text-success-600' :
              availability.color === 'amber' ? 'bg-amber-50 text-amber-600' :
              'bg-gray-100 text-gray-600'
            }`}>
              {availability.icon === 'check' && (
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
              )}
              {availability.icon === 'clock' && (
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              )}
              {availability.label}
            </div>

            <h1 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
              {product.name}
            </h1>

            <p class="text-lg text-gray-600 mb-6">
              {product.shortDescription || product.description?.slice(0, 200)}
            </p>

            <!-- Variants (if any) -->
            {product.hasVariants && product.variants.length > 0 && (
              <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 mb-2">
                  Válassz variációt:
                </label>
                <div class="flex flex-wrap gap-2">
                  {product.variants.map((variant, i) => (
                    <button
                      type="button"
                      class={`px-4 py-2 rounded-lg border-2 text-sm font-medium transition-all ${
                        i === 0
                          ? 'border-primary-600 bg-primary-50 text-primary-700'
                          : 'border-gray-200 hover:border-primary-300 text-gray-700'
                      }`}
                      data-variant={variant.sku}
                      data-variant-image={variant.image}
                    >
                      {variant.name}
                    </button>
                  ))}
                </div>
              </div>
            )}

            <!-- Price -->
            <div class="mb-6">
              {product.price ? (
                <>
                  <div class="text-3xl font-bold text-gray-900">{formatPrice(product.price)}</div>
                  <div class="text-sm text-gray-500 mt-1">Bruttó ár (ÁFA-val)</div>
                  <div class="text-green-600 font-medium mt-2">
                    vagy havi ~{formatPrice(Math.round(product.price / 12))} részletfizetéssel
                  </div>
                </>
              ) : (
                <div class="text-2xl font-bold text-primary-600">Kérjen egyedi ajánlatot!</div>
              )}
            </div>

            <!-- Trust badges mini -->
            <div class="grid grid-cols-2 gap-3 mb-8">
              {TRUST_BADGES.map((badge) => (
                <div class="flex items-center gap-2 text-sm">
                  <svg class="w-5 h-5 text-primary-600 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={icons[badge.icon]} />
                  <span class="text-gray-700">{badge.title}</span>
                </div>
              ))}
            </div>

            <!-- CTAs -->
            <div class="flex flex-col sm:flex-row gap-3">
              <a
                href="/kapcsolat"
                class="flex-1 inline-flex items-center justify-center px-6 py-4 bg-primary-600 text-white font-semibold rounded-xl hover:bg-primary-700 transition-colors shadow-lg"
              >
                Ingyenes konzultáció
              </a>
              <a
                href={CONTACT.phoneTel}
                class="flex-1 inline-flex items-center justify-center gap-2 px-6 py-4 bg-success-50 text-success-700 font-semibold rounded-xl hover:bg-success-100 transition-colors"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                Hívás most
              </a>
            </div>

            <!-- SKU -->
            <div class="mt-6 text-xs text-gray-400">
              Cikkszám: {product.sku}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- STATS BAR -->
    <StatsBar stats={product.stats} category={product.categorySlug} />

    <!-- VIDEO DEMO -->
    <VideoDemo videos={product.youtubeVideos} productName={product.name} />

    <!-- DESCRIPTION SECTION -->
    {product.description && (
      <section class="py-12 bg-gray-50">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Részletes leírás</h2>
          <div class="prose prose-lg max-w-none text-gray-600">
            <p set:html={product.description.replace(/\n/g, '<br>')} />
          </div>
        </div>
      </section>
    )}

    <!-- TECH SPECS -->
    <TechSpecs
      specs={product.specs}
      productName={product.name}
      category={product.categorySlug}
    />

    <!-- ROI CALCULATOR -->
    <ROICalculator
      productPrice={product.price}
      productName={product.name}
      category={product.categorySlug}
    />

    <!-- WHATS INCLUDED -->
    <WhatsIncluded
      items={product.whatsIncluded}
      productName={product.name}
      category={product.categorySlug}
    />

    <!-- PRODUCT FAQ -->
    <ProductFAQ
      faq={product.faq}
      productName={product.name}
      category={product.categorySlug}
    />

    <!-- TESTIMONIALS -->
    <Testimonials
      productName={product.name}
      category={product.categorySlug}
    />

    <!-- EXPERT QUOTE -->
    <ExpertQuote
      productName={product.name}
      category={product.categorySlug}
    />

    <!-- CTA SECTION -->
    <section class="py-16 bg-primary-600">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-2xl lg:text-3xl font-bold text-white mb-4">
          Érdekel a {product.name}?
        </h2>
        <p class="text-lg text-primary-100 mb-8">
          Kérj ingyenes konzultációt, és segítünk eldönteni, hogy ez-e a legjobb választás számodra.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/kapcsolat"
            class="inline-flex items-center justify-center px-8 py-4 bg-white text-primary-600 font-semibold rounded-xl hover:bg-primary-50 transition-colors"
          >
            Konzultáció kérése
          </a>
          <a
            href={CONTACT.phoneTel}
            class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-primary-500 text-white font-semibold rounded-xl hover:bg-primary-400 transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            {CONTACT.phoneDisplay}
          </a>
        </div>
      </div>
    </section>

    <!-- RELATED PRODUCTS -->
    <RelatedProducts
      currentSlug={product.slug}
      categorySlug={product.categorySlug}
    />

  </div>
</BaseLayout>

<script>
  // Thumbnail gallery functionality
  document.querySelectorAll('[data-thumbnail]').forEach(thumb => {
    thumb.addEventListener('click', () => {
      const src = thumb.getAttribute('data-src');
      const mainImg = document.getElementById('main-image') as HTMLImageElement;
      if (mainImg && src) {
        mainImg.src = src;
      }

      // Update active state
      document.querySelectorAll('[data-thumbnail]').forEach(t => {
        t.classList.remove('ring-2', 'ring-primary-600');
      });
      thumb.classList.add('ring-2', 'ring-primary-600');
    });
  });

  // Variant selection functionality
  document.querySelectorAll('[data-variant]').forEach(btn => {
    btn.addEventListener('click', () => {
      const image = btn.getAttribute('data-variant-image');
      const mainImg = document.getElementById('main-image') as HTMLImageElement;

      if (mainImg && image) {
        const src = image.startsWith('/') ? image : `/${image}`;
        mainImg.src = src;
      }

      // Update active state
      document.querySelectorAll('[data-variant]').forEach(b => {
        b.classList.remove('border-primary-600', 'bg-primary-50', 'text-primary-700');
        b.classList.add('border-gray-200', 'text-gray-700');
      });
      btn.classList.remove('border-gray-200', 'text-gray-700');
      btn.classList.add('border-primary-600', 'bg-primary-50', 'text-primary-700');
    });
  });
</script>

---
import BaseLayout from './BaseLayout.astro';
import { SITE, CONTACT, TRUST_BADGES } from '../lib/constants';

interface Props {
  product: {
    name: string;
    slug: string;
    category: string;
    categorySlug: string;
    description: string;
    shortDescription: string;
    price?: number;
    priceFormatted?: string;
    images: string[];
    videoUrl?: string;
    features: string[];
    specs: { label: string; value: string }[];
    faqs: { question: string; answer: string }[];
  };
}

const { product } = Astro.props;

// Breadcrumb schema
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Főoldal", "item": SITE.url },
    { "@type": "ListItem", "position": 2, "name": product.category, "item": `${SITE.url}/${product.categorySlug}` },
    { "@type": "ListItem", "position": 3, "name": product.name }
  ]
};

// Product schema
const productSchema = {
  "@context": "https://schema.org",
  "@type": "Product",
  "name": product.name,
  "description": product.description,
  "brand": { "@type": "Brand", "name": "SkinLab" },
  "image": product.images.map(img => `${SITE.url}${img}`),
  "offers": {
    "@type": "Offer",
    "url": `${SITE.url}/${product.categorySlug}/${product.slug}`,
    "priceCurrency": "HUF",
    "price": product.price,
    "availability": "https://schema.org/InStock",
    "seller": { "@id": `${SITE.url}/#organization` },
    "warranty": {
      "@type": "WarrantyPromise",
      "durationOfWarranty": "P2Y",
      "warrantyScope": "https://schema.org/FullWarranty"
    }
  }
};

// FAQ schema
const faqSchema = product.faqs.length > 0 ? {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": product.faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": { "@type": "Answer", "text": faq.answer }
  }))
} : null;

const icons: Record<string, string> = {
  'shield-check': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />`,
  'truck': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0" />`,
  'graduation-cap': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222" />`,
  'wrench': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />`,
};
---

<BaseLayout
  title={product.name}
  description={product.shortDescription}
  schema={[breadcrumbSchema, productSchema, faqSchema].filter(Boolean)}
>
  <div id="main-content">
    
    <!-- Breadcrumb -->
    <nav class="bg-gray-100 border-b" aria-label="Breadcrumb">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-3">
        <ol class="flex items-center gap-2 text-sm">
          <li>
            <a href="/" class="text-gray-500 hover:text-primary-600">Főoldal</a>
          </li>
          <li class="text-gray-400">›</li>
          <li>
            <a href={`/${product.categorySlug}`} class="text-gray-500 hover:text-primary-600">{product.category}</a>
          </li>
          <li class="text-gray-400">›</li>
          <li class="text-gray-900 font-medium">{product.name}</li>
        </ol>
      </div>
    </nav>
    
    <!-- HERO SECTION -->
    <section class="bg-white py-8 lg:py-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-10 lg:gap-16">
          
          <!-- Media Gallery -->
          <div class="space-y-4">
            <!-- Main Image/Video -->
            <div class="relative aspect-square bg-gradient-to-br from-gray-100 to-gray-200 rounded-2xl overflow-hidden">
              {product.videoUrl ? (
                <!-- Video placeholder -->
                <div class="absolute inset-0 flex items-center justify-center cursor-pointer group">
                  <div class="text-center">
                    <div class="w-20 h-20 bg-primary-600 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform shadow-xl">
                      <svg class="w-8 h-8 text-white ml-1" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M8 5v14l11-7z"/>
                      </svg>
                    </div>
                    <p class="text-gray-700 font-semibold">Nézd meg működés közben</p>
                  </div>
                  <div class="absolute top-4 left-4 bg-red-500 text-white text-xs font-bold px-3 py-1.5 rounded-full flex items-center gap-1">
                    <span class="w-2 h-2 bg-white rounded-full animate-pulse"></span>
                    DEMO VIDEÓ
                  </div>
                </div>
              ) : (
                <!-- Image placeholder -->
                <div class="absolute inset-0 flex items-center justify-center">
                  <div class="text-center p-8">
                    <div class="w-20 h-20 mx-auto mb-4 rounded-2xl bg-white shadow-lg flex items-center justify-center">
                      <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                    </div>
                    <p class="text-gray-500 font-medium">Termék kép helye</p>
                    <p class="text-sm text-gray-400 mt-1">800x800px ajánlott</p>
                  </div>
                </div>
              )}
            </div>
            
            <!-- Thumbnails -->
            <div class="grid grid-cols-5 gap-2">
              {[1, 2, 3, 4, 5].map((i) => (
                <div class={`aspect-square rounded-lg bg-gray-200 cursor-pointer hover:ring-2 hover:ring-primary-400 ${i === 1 ? 'ring-2 ring-primary-600' : ''}`}>
                  <div class="w-full h-full flex items-center justify-center text-gray-400 text-xs">
                    {i}
                  </div>
                </div>
              ))}
            </div>
          </div>
          
          <!-- Product Info -->
          <div>
            <!-- Badge -->
            <div class="inline-flex items-center gap-2 px-3 py-1 bg-success-50 text-success-600 rounded-full text-sm font-medium mb-4">
              <span class="w-2 h-2 bg-success-500 rounded-full"></span>
              Raktáron
            </div>
            
            <h1 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
              {product.name}
            </h1>
            
            <p class="text-lg text-gray-600 mb-6">
              {product.shortDescription}
            </p>
            
            <!-- Price -->
            {product.priceFormatted && (
              <div class="mb-6">
                <div class="text-sm text-gray-500 mb-1">Nettó ár</div>
                <div class="text-3xl font-bold text-gray-900">{product.priceFormatted}</div>
                <div class="text-sm text-gray-500">+ ÁFA</div>
              </div>
            )}
            
            <!-- Trust badges mini -->
            <div class="grid grid-cols-2 gap-3 mb-8">
              {TRUST_BADGES.map((badge) => (
                <div class="flex items-center gap-2 text-sm">
                  <svg class="w-5 h-5 text-primary-600 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={icons[badge.icon]} />
                  <span class="text-gray-700">{badge.title}</span>
                </div>
              ))}
            </div>
            
            <!-- CTAs -->
            <div class="flex flex-col sm:flex-row gap-3">
              <a
                href="/kapcsolat"
                class="flex-1 inline-flex items-center justify-center px-6 py-4 bg-primary-600 text-white font-semibold rounded-xl hover:bg-primary-700 transition-colors shadow-lg"
              >
                Ingyenes konzultáció
              </a>
              <a
                href={CONTACT.phoneTel}
                class="flex-1 inline-flex items-center justify-center gap-2 px-6 py-4 bg-success-50 text-success-700 font-semibold rounded-xl hover:bg-success-100 transition-colors"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                Hívás most
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Additional sections from slot -->
    <slot />
    
    <!-- FEATURES SECTION -->
    {product.features.length > 0 && (
      <section class="py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <h2 class="text-2xl lg:text-3xl font-bold text-gray-900 mb-8 text-center">
            Főbb jellemzők
          </h2>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {product.features.map((feature) => (
              <div class="flex items-start gap-3 bg-white p-5 rounded-xl">
                <svg class="w-6 h-6 text-primary-600 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-gray-700">{feature}</span>
              </div>
            ))}
          </div>
        </div>
      </section>
    )}
    
    <!-- SPECS SECTION -->
    {product.specs.length > 0 && (
      <section class="py-16 bg-white">
        <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
          <h2 class="text-2xl lg:text-3xl font-bold text-gray-900 mb-8 text-center">
            Műszaki adatok
          </h2>
          <div class="divide-y divide-gray-200 border rounded-2xl overflow-hidden">
            {product.specs.map((spec, i) => (
              <div class={`flex justify-between p-4 ${i % 2 === 0 ? 'bg-gray-50' : 'bg-white'}`}>
                <span class="text-gray-600">{spec.label}</span>
                <span class="font-medium text-gray-900">{spec.value}</span>
              </div>
            ))}
          </div>
        </div>
      </section>
    )}
    
    <!-- FAQ SECTION -->
    {product.faqs.length > 0 && (
      <section class="py-16 bg-gray-50">
        <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
          <h2 class="text-2xl lg:text-3xl font-bold text-gray-900 mb-8 text-center">
            Gyakori kérdések
          </h2>
          <div class="space-y-4">
            {product.faqs.map((faq) => (
              <details class="group bg-white rounded-xl shadow-sm">
                <summary class="flex items-center justify-between p-5 cursor-pointer font-medium text-gray-900 hover:text-primary-600">
                  {faq.question}
                  <svg class="w-5 h-5 text-gray-400 group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </summary>
                <div class="px-5 pb-5 text-gray-600">
                  {faq.answer}
                </div>
              </details>
            ))}
          </div>
        </div>
      </section>
    )}
    
    <!-- BOTTOM CTA -->
    <section class="py-16 bg-primary-600">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-2xl lg:text-3xl font-bold text-white mb-4">
          Érdekel ez a termék?
        </h2>
        <p class="text-lg text-primary-100 mb-8">
          Kérj ingyenes konzultációt, és segítünk eldönteni, hogy ez-e a legjobb választás számodra.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/kapcsolat"
            class="inline-flex items-center justify-center px-8 py-4 bg-white text-primary-600 font-semibold rounded-xl hover:bg-primary-50 transition-colors"
          >
            Konzultáció kérése
          </a>
          <a
            href={CONTACT.phoneTel}
            class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-primary-500 text-white font-semibold rounded-xl hover:bg-primary-400 transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            {CONTACT.phoneDisplay}
          </a>
        </div>
      </div>
    </section>
    
  </div>
</BaseLayout>

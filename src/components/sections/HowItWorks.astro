---
const steps = [
  {
    number: '1',
    title: 'Konzultáció',
    description: 'Ingyenes személyes vagy online bemutató, ahol megismered a gépeket',
    color: 'bg-blue-100 text-blue-600',
  },
  {
    number: '2',
    title: 'Kiválasztás',
    description: 'Segítünk a szalonodnak legmegfelelőbb gépet kiválasztani',
    color: 'bg-green-100 text-green-600',
  },
  {
    number: '3',
    title: 'Telepítés + oktatás',
    description: 'Helyszíni üzembe helyezés és 4-6 órás betanítás',
    color: 'bg-purple-100 text-purple-600',
  },
  {
    number: '4',
    title: 'Indulás!',
    description: 'Folyamatos support, szerviz és üzleti tanácsadás',
    color: 'bg-amber-100 text-amber-600',
  },
];
---

<section class="py-16 lg:py-20 bg-white">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-10 lg:mb-14">
      <h2 class="text-2xl lg:text-3xl font-bold text-gray-900 mb-3">
        Hogyan működik?
      </h2>
      <p class="text-gray-600">
        4 egyszerű lépés a sikeres indulásig
      </p>
    </div>

    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6 lg:gap-8">
      {steps.map((step, index) => (
        <div class="text-center relative">
          <!-- Connector line (hidden on last item and mobile) -->
          {index < steps.length - 1 && (
            <div class="hidden lg:block absolute top-8 left-1/2 w-full h-0.5 bg-gray-200" aria-hidden="true"></div>
          )}

          <div class={`w-14 h-14 lg:w-16 lg:h-16 ${step.color} rounded-2xl flex items-center justify-center mx-auto mb-4 text-xl lg:text-2xl font-bold relative z-10`}>
            {step.number}
          </div>
          <h3 class="font-bold text-gray-900 mb-2">{step.title}</h3>
          <p class="text-gray-600 text-sm">{step.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>

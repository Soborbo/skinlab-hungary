---
import { ContentImage } from '../images';
import trainingImage from '../../assets/training-image.jpg';
import { t, getLocaleFromUrl, type Locale } from '../../i18n/ui';

// Get locale from URL
const locale = getLocaleFromUrl(Astro.url) as Locale;

const features = [
  {
    titleKey: 'whyUs.training',
    descKey: 'whyUs.trainingDesc',
    icon: 'graduation',
    color: 'blue',
  },
  {
    titleKey: 'whyUs.warranty',
    descKey: 'whyUs.warrantyDesc',
    icon: 'shield',
    color: 'green',
  },
  {
    titleKey: 'whyUs.financing',
    descKey: 'whyUs.financingDesc',
    icon: 'currency',
    color: 'purple',
  },
  {
    titleKey: 'whyUs.consulting',
    descKey: 'whyUs.consultingDesc',
    icon: 'chart',
    color: 'amber',
  },
];

const icons: Record<string, string> = {
  'graduation': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222" />`,
  'shield': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />`,
  'currency': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />`,
  'chart': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />`,
};

const colorClasses: Record<string, { bg: string; text: string }> = {
  'blue': { bg: 'bg-blue-100', text: 'text-blue-600' },
  'green': { bg: 'bg-green-100', text: 'text-green-600' },
  'purple': { bg: 'bg-purple-100', text: 'text-purple-600' },
  'amber': { bg: 'bg-amber-100', text: 'text-amber-600' },
};
---

<section class="py-16 lg:py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <!-- Left: Content -->
      <div>
        <h2 class="text-2xl lg:text-3xl font-bold text-gray-900 mb-4">
          {t(locale, 'whyUs.title')}
        </h2>
        <p class="text-gray-600 mb-8">
          {t(locale, 'whyUs.subtitle')}
        </p>

        <div class="space-y-5">
          {features.map((feature) => (
            <div class="flex gap-4">
              <div class={`w-12 h-12 ${colorClasses[feature.color].bg} rounded-xl flex items-center justify-center flex-shrink-0`}>
                <svg class={`w-6 h-6 ${colorClasses[feature.color].text}`} fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={icons[feature.icon]} />
              </div>
              <div>
                <h3 class="font-bold text-gray-900 mb-1">{t(locale, feature.titleKey)}</h3>
                <p class="text-gray-600 text-sm">{t(locale, feature.descKey)}</p>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Right: Training/Education Image with floating card -->
      <div class="relative">
        <div class="rounded-2xl aspect-square overflow-hidden">
          <ContentImage
            src={trainingImage}
            alt={t(locale, 'whyUs.training')}
            class="w-full h-full object-cover"
          />
        </div>
        <!-- Floating testimonial card -->
        <div class="absolute -bottom-4 -left-4 lg:-left-6 bg-white rounded-xl p-4 lg:p-5 shadow-xl border border-gray-100 max-w-xs hidden sm:block">
          <div class="flex items-center gap-3 mb-2">
            <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center text-green-600">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            </div>
            <span class="font-bold text-gray-900 text-sm">{t(locale, 'whyUs.testimonialTitle')}</span>
          </div>
          <p class="text-gray-600 text-sm italic">"{t(locale, 'whyUs.testimonialText')}"</p>
          <p class="text-gray-400 text-xs mt-2">â€“ {t(locale, 'whyUs.testimonialAuthor')}</p>
        </div>
      </div>
    </div>
  </div>
</section>

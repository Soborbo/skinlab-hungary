---
// Brand logos for the marquee
const brands = [
  { name: 'Novalight', slug: 'novalight' },
  { name: 'MAST', slug: 'mast' },
  { name: 'Prestige', slug: 'prestige' },
  { name: 'NyxQueen', slug: 'nyxqueen' },
  { name: 'HydraCrown', slug: 'hydracrown' },
  { name: 'Neo Laser', slug: 'neolaser' },
];
---

<section class="py-10 lg:py-12 bg-gray-50 overflow-hidden">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-8">
      <h2 class="text-xl lg:text-2xl font-bold text-gray-900 mb-2">
        Márkáink
      </h2>
      <p class="text-gray-600 text-sm">
        Prémium kozmetikai márkák kizárólagos forgalmazója Magyarországon
      </p>
    </div>
  </div>

  <!-- Marquee Container -->
  <div class="relative">
    <!-- Fade edges -->
    <div class="absolute left-0 top-0 bottom-0 w-20 bg-gradient-to-r from-gray-50 to-transparent z-10 pointer-events-none" aria-hidden="true"></div>
    <div class="absolute right-0 top-0 bottom-0 w-20 bg-gradient-to-l from-gray-50 to-transparent z-10 pointer-events-none" aria-hidden="true"></div>

    <!-- Marquee track -->
    <div class="marquee-track flex">
      <!-- First set of logos -->
      <div class="marquee-content flex items-center gap-12 lg:gap-16 px-6">
        {brands.map((brand) => (
          <div class="flex-shrink-0 flex items-center justify-center h-16 px-6 bg-white rounded-xl shadow-sm border border-gray-100">
            <span class="text-lg lg:text-xl font-bold text-gray-400 whitespace-nowrap">
              {brand.name}
            </span>
          </div>
        ))}
      </div>
      <!-- Duplicate for seamless loop -->
      <div class="marquee-content flex items-center gap-12 lg:gap-16 px-6" aria-hidden="true">
        {brands.map((brand) => (
          <div class="flex-shrink-0 flex items-center justify-center h-16 px-6 bg-white rounded-xl shadow-sm border border-gray-100">
            <span class="text-lg lg:text-xl font-bold text-gray-400 whitespace-nowrap">
              {brand.name}
            </span>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .marquee-track {
    animation: marquee 30s linear infinite;
  }

  .marquee-content {
    flex-shrink: 0;
  }

  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* Pause on hover for better UX */
  .marquee-track:hover {
    animation-play-state: paused;
  }

  /* Respect reduced motion preference */
  @media (prefers-reduced-motion: reduce) {
    .marquee-track {
      animation: none;
    }

    .marquee-content:nth-child(2) {
      display: none;
    }
  }
</style>

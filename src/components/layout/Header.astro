---
import { CONTACT, NAV_ITEMS, MEGA_MENU } from '../../lib/constants';
import { Image } from 'astro:assets';
import skinlabLogo from '../../assets/brands/skinlab-logo.jpg';
---

<a href="#main-content" class="skip-to-content">
  Ugrás a tartalomhoz
</a>

<header class="sticky top-0 z-50 bg-primary-700 shadow-lg">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16 lg:h-20">

      <!-- Logo -->
      <a href="/" class="flex items-center shrink-0">
        <Image
          src={skinlabLogo}
          alt="SkinLab - laser&beauty equipment"
          class="h-12 lg:h-14 w-auto"
          height={56}
          loading="eager"
        />
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center gap-1">
        {NAV_ITEMS.map((item) => (
          item.hasMegaMenu ? (
            <div class="relative" data-mega-menu-trigger>
              <button
                type="button"
                class="inline-flex items-center gap-1 px-4 py-2 text-sm font-medium text-white/90 hover:text-white rounded-lg hover:bg-white/10 transition-colors"
                aria-expanded="false"
                aria-haspopup="true"
              >
                {item.label}
                <svg class="w-4 h-4 transition-transform duration-200" data-chevron fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </button>
            </div>
          ) : (
            <a
              href={item.href}
              class="px-4 py-2 text-sm font-medium text-white/90 hover:text-white rounded-lg hover:bg-white/10 transition-colors"
            >
              {item.label}
            </a>
          )
        ))}
      </nav>

      <!-- Right side: Phone + CTA -->
      <div class="flex items-center gap-3">
        <!-- Phone (desktop only) -->
        <a
          href={CONTACT.phoneTel}
          class="hidden md:flex items-center gap-2 px-4 py-2 bg-white/10 text-white font-semibold rounded-lg hover:bg-white/20 transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          <span>{CONTACT.phoneDisplay}</span>
        </a>

        <!-- CTA Button -->
        <a
          href="/kapcsolat"
          class="inline-flex items-center px-4 lg:px-5 py-2 lg:py-2.5 bg-white text-primary-700 font-semibold text-sm rounded-lg hover:bg-primary-50 transition-colors shadow-sm"
        >
          <span class="hidden sm:inline">Ingyenes konzultáció</span>
          <span class="sm:hidden">Konzultáció</span>
        </a>

        <!-- Mobile menu button -->
        <button
          type="button"
          class="lg:hidden inline-flex items-center justify-center p-2 rounded-lg text-white hover:text-white hover:bg-white/10"
          aria-label="Menü megnyitása"
          data-mobile-menu-toggle
        >
          <svg class="w-6 h-6" data-menu-icon fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg class="w-6 h-6 hidden" data-close-icon fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mega Menu Dropdown -->
  <div
    class="hidden absolute left-0 right-0 bg-white border-b border-gray-200 shadow-xl"
    data-mega-menu
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="grid grid-cols-4 gap-8">
        {MEGA_MENU.columns.map((column) => (
          <div>
            <h3 class="text-xs font-semibold text-gray-400 uppercase tracking-wider mb-4">
              {column.title}
            </h3>
            <ul class="space-y-1">
              {column.items.map((item) => (
                <li>
                  <a
                    href={item.href}
                    class="group flex items-start gap-3 p-3 -mx-3 rounded-lg hover:bg-gray-50 transition-colors"
                  >
                    <div class="flex-1">
                      <div class="flex items-center gap-2">
                        <span class="text-sm font-medium text-gray-900 group-hover:text-primary-600">
                          {item.label}
                        </span>
                        {item.badge && (
                          <span class="inline-flex items-center px-2 py-0.5 text-xs font-medium bg-primary-100 text-primary-700 rounded-full">
                            {item.badge}
                          </span>
                        )}
                        <span class="text-xs text-gray-400">
                          ({item.count})
                        </span>
                      </div>
                      <p class="mt-0.5 text-xs text-gray-500">
                        {item.description}
                      </p>
                    </div>
                    <svg class="w-4 h-4 text-gray-300 group-hover:text-primary-500 mt-0.5 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>

      <!-- Bottom CTA -->
      <div class="mt-8 pt-6 border-t border-gray-100 flex items-center justify-between">
        <p class="text-sm text-gray-500">
          Nem találod amit keresel? Segítünk kiválasztani a megfelelő készüléket.
        </p>
        <a
          href={MEGA_MENU.cta.href}
          class="inline-flex items-center gap-2 text-sm font-medium text-primary-600 hover:text-primary-700"
        >
          {MEGA_MENU.cta.label}
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </div>

  <!-- Mobile Navigation -->
  <div class="hidden lg:hidden" data-mobile-menu>
    <div class="px-4 pt-2 pb-4 bg-white border-t border-gray-100 max-h-[calc(100vh-4rem)] overflow-y-auto">

      <!-- Mega menu items for mobile -->
      {MEGA_MENU.columns.map((column) => (
        <div class="py-2" data-mobile-accordion>
          <button
            type="button"
            class="w-full flex items-center justify-between px-4 py-3 text-base font-medium text-gray-700 hover:bg-gray-50 rounded-lg"
            data-accordion-trigger
          >
            <span>{column.title}</span>
            <svg class="w-5 h-5 text-gray-400 transition-transform duration-200" data-accordion-icon fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div class="hidden pl-4" data-accordion-content>
            {column.items.map((item) => (
              <a
                href={item.href}
                class="flex items-center justify-between px-4 py-3 text-sm text-gray-600 hover:text-primary-600 hover:bg-gray-50 rounded-lg"
              >
                <span class="flex items-center gap-2">
                  {item.label}
                  {item.badge && (
                    <span class="inline-flex items-center px-1.5 py-0.5 text-xs font-medium bg-primary-100 text-primary-700 rounded">
                      {item.badge}
                    </span>
                  )}
                </span>
                <span class="text-xs text-gray-400">{item.count}</span>
              </a>
            ))}
          </div>
        </div>
      ))}

      <!-- Other nav items -->
      <div class="mt-2 pt-2 border-t border-gray-100 space-y-1">
        {NAV_ITEMS.filter(item => !item.hasMegaMenu).map((item) => (
          <a
            href={item.href}
            class="block px-4 py-3 text-base font-medium text-gray-600 hover:text-primary-600 hover:bg-gray-50 rounded-lg"
          >
            {item.label}
          </a>
        ))}
      </div>

      <!-- Phone -->
      <div class="mt-4 pt-4 border-t border-gray-100">
        <a
          href={CONTACT.phoneTel}
          class="flex items-center gap-3 px-4 py-3 text-base font-medium text-success-600 bg-success-50 rounded-lg"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          {CONTACT.phoneDisplay}
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  const mobileToggle = document.querySelector('[data-mobile-menu-toggle]');
  const mobileMenu = document.querySelector('[data-mobile-menu]');
  const menuIcon = document.querySelector('[data-menu-icon]');
  const closeIcon = document.querySelector('[data-close-icon]');

  mobileToggle?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
    menuIcon?.classList.toggle('hidden');
    closeIcon?.classList.toggle('hidden');
  });

  // Mobile accordion
  document.querySelectorAll('[data-accordion-trigger]').forEach(trigger => {
    trigger.addEventListener('click', () => {
      const accordion = trigger.closest('[data-mobile-accordion]');
      const content = accordion?.querySelector('[data-accordion-content]');
      const icon = accordion?.querySelector('[data-accordion-icon]');

      content?.classList.toggle('hidden');
      icon?.classList.toggle('rotate-180');
    });
  });

  // Desktop mega menu
  const megaMenuTrigger = document.querySelector('[data-mega-menu-trigger]');
  const megaMenu = document.querySelector('[data-mega-menu]');
  const chevron = document.querySelector('[data-chevron]');
  let megaMenuTimeout: ReturnType<typeof setTimeout>;

  function showMegaMenu() {
    clearTimeout(megaMenuTimeout);
    megaMenu?.classList.remove('hidden');
    chevron?.classList.add('rotate-180');
    megaMenuTrigger?.querySelector('button')?.setAttribute('aria-expanded', 'true');
  }

  function hideMegaMenu() {
    megaMenuTimeout = setTimeout(() => {
      megaMenu?.classList.add('hidden');
      chevron?.classList.remove('rotate-180');
      megaMenuTrigger?.querySelector('button')?.setAttribute('aria-expanded', 'false');
    }, 150);
  }

  megaMenuTrigger?.addEventListener('mouseenter', showMegaMenu);
  megaMenuTrigger?.addEventListener('mouseleave', hideMegaMenu);
  megaMenu?.addEventListener('mouseenter', showMegaMenu);
  megaMenu?.addEventListener('mouseleave', hideMegaMenu);

  // Keyboard accessibility
  megaMenuTrigger?.querySelector('button')?.addEventListener('click', () => {
    const isOpen = !megaMenu?.classList.contains('hidden');
    if (isOpen) {
      hideMegaMenu();
    } else {
      showMegaMenu();
    }
  });

  // Close on escape
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      hideMegaMenu();
      mobileMenu?.classList.add('hidden');
      menuIcon?.classList.remove('hidden');
      closeIcon?.classList.add('hidden');
    }
  });
</script>

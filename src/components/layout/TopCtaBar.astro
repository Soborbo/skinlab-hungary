---
import { CONTACT } from '../../lib/constants';
---

<div class="bg-gray-900 text-white py-2 text-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between">
      <!-- Left side: Trust badges -->
      <div class="hidden md:flex items-center gap-6 text-gray-300">
        <span class="flex items-center gap-1.5">
          <svg class="w-4 h-4 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
          </svg>
          2 év garancia
        </span>
        <span class="flex items-center gap-1.5">
          <svg class="w-4 h-4 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
          2 hét szállítás
        </span>
        <span class="flex items-center gap-1.5">
          <svg class="w-4 h-4 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
          </svg>
          FAR tanúsítvány
        </span>
      </div>

      <!-- Mobile: Promo text -->
      <div class="md:hidden text-gray-300 text-xs">
        <span class="inline-flex items-center gap-1">
          <span class="text-green-400">✓</span> 2 év garancia
          <span class="mx-2">|</span>
          <span class="text-green-400">✓</span> 2 hét szállítás
        </span>
      </div>

      <!-- Right side: Phone -->
      <a
        href={CONTACT.phoneTel}
        class="flex items-center gap-2 text-white hover:text-green-400 transition-colors font-medium"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
        </svg>
        <span class="hidden sm:inline">{CONTACT.phoneDisplay}</span>
        <span class="sm:hidden">Hívás</span>
      </a>
    </div>
  </div>
</div>

---
/**
 * Card - Reusable card component
 *
 * Variants: default, elevated, bordered
 * With optional hover effect
 */

interface Props {
  variant?: 'default' | 'elevated' | 'bordered';
  hover?: boolean;
  padding?: 'none' | 'sm' | 'md' | 'lg';
  href?: string;
  class?: string;
}

const {
  variant = 'default',
  hover = false,
  padding = 'md',
  href,
  class: className = '',
} = Astro.props;

const baseStyles = 'rounded-xl bg-white overflow-hidden';

const variantStyles = {
  default: 'shadow-card',
  elevated: 'shadow-soft',
  bordered: 'border border-gray-200',
};

const paddingStyles = {
  none: '',
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8',
};

const hoverStyles = hover ? 'transition-all duration-300 hover:shadow-card-hover hover:-translate-y-1' : '';

const classes = [
  baseStyles,
  variantStyles[variant],
  paddingStyles[padding],
  hoverStyles,
  href ? 'block cursor-pointer' : '',
  className,
].filter(Boolean).join(' ');
---

{href ? (
  <a href={href} class={classes}>
    <slot />
  </a>
) : (
  <div class={classes}>
    <slot />
  </div>
)}

---
/**
 * Input - Reusable text input component
 *
 * Supports label, error state, helper text
 */

interface Props {
  type?: 'text' | 'email' | 'tel' | 'password' | 'number' | 'url';
  name: string;
  id?: string;
  label?: string;
  placeholder?: string;
  value?: string;
  required?: boolean;
  disabled?: boolean;
  error?: string;
  helperText?: string;
  autocomplete?: string;
  class?: string;
}

const {
  type = 'text',
  name,
  id = name,
  label,
  placeholder,
  value = '',
  required = false,
  disabled = false,
  error,
  helperText,
  autocomplete,
  class: className = '',
} = Astro.props;

const inputBaseStyles = 'block w-full px-4 py-3 rounded-lg border bg-white text-gray-900 placeholder-gray-400 transition-colors focus:outline-none focus:ring-2 focus:ring-offset-0';

const inputStateStyles = error
  ? 'border-red-300 focus:border-red-500 focus:ring-red-500'
  : 'border-gray-300 focus:border-primary-500 focus:ring-primary-500';

const disabledStyles = disabled ? 'bg-gray-50 text-gray-500 cursor-not-allowed' : '';

const inputClasses = [inputBaseStyles, inputStateStyles, disabledStyles, className].filter(Boolean).join(' ');
---

<div class="w-full">
  {label && (
    <label for={id} class="block text-sm font-medium text-gray-700 mb-2">
      {label}
      {required && <span class="text-red-500 ml-1">*</span>}
    </label>
  )}

  <input
    type={type}
    name={name}
    id={id}
    placeholder={placeholder}
    value={value}
    required={required}
    disabled={disabled}
    autocomplete={autocomplete}
    class={inputClasses}
    aria-invalid={error ? 'true' : 'false'}
    aria-describedby={error ? `${id}-error` : helperText ? `${id}-helper` : undefined}
  />

  {error && (
    <p id={`${id}-error`} class="mt-2 text-sm text-red-600 flex items-center gap-1">
      <svg class="w-4 h-4 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
      </svg>
      {error}
    </p>
  )}

  {!error && helperText && (
    <p id={`${id}-helper`} class="mt-2 text-sm text-gray-500">
      {helperText}
    </p>
  )}
</div>

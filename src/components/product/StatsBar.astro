---
/**
 * StatsBar - Termék statisztikák sáv
 * Kiemelt számok/értékek megjelenítése a termékhez
 */

interface Stat {
  value: string;
  unit?: string;
  label: string;
  icon?: string;
}

interface Props {
  stats?: Stat[];
  category?: string;
}

const { stats, category } = Astro.props;

// Alapértelmezett statok kategóriánként, ha nincs egyedi
const defaultStats: Record<string, Stat[]> = {
  'diodalezerek': [
    { value: '2', unit: 'év', label: 'Garancia', icon: 'shield' },
    { value: '4', label: 'Hullámhossz', icon: 'wave' },
    { value: '50M', label: 'Lövés élettartam', icon: 'zap' },
    { value: '0-24', label: 'Folyamatos üzem', icon: 'clock' },
  ],
  'hydrafacial': [
    { value: '2', unit: 'év', label: 'Garancia', icon: 'shield' },
    { value: '6+', label: 'Funkció egyben', icon: 'layers' },
    { value: '30', unit: 'perc', label: 'Kezelési idő', icon: 'clock' },
    { value: '100%', label: 'Fájdalommentes', icon: 'heart' },
  ],
  'nd-yag-lezerek': [
    { value: '2', unit: 'év', label: 'Garancia', icon: 'shield' },
    { value: '2', label: 'Hullámhossz', icon: 'wave' },
    { value: '10', unit: 'Hz', label: 'Ismétlési ráta', icon: 'zap' },
    { value: '100%', label: 'Színeltávolítás', icon: 'palette' },
  ],
  'sminktetovalas': [
    { value: '2', unit: 'év', label: 'Garancia', icon: 'shield' },
    { value: '5+', label: 'Tűkonfiguráció', icon: 'pen' },
    { value: 'Pro', label: 'Minőség', icon: 'star' },
    { value: '100%', label: 'Precizitás', icon: 'target' },
  ],
};

// Globális alapértelmezett, ha nincs kategória-specifikus
const globalDefaults: Stat[] = [
  { value: '2', unit: 'év', label: 'Garancia', icon: 'shield' },
  { value: 'Ingyenes', label: 'Betanítás', icon: 'graduation' },
  { value: '2', unit: 'hét', label: 'Szállítás', icon: 'truck' },
  { value: 'Azonnali', label: 'Szerviz', icon: 'wrench' },
];

const displayStats = stats && stats.length > 0
  ? stats
  : (category && defaultStats[category])
    ? defaultStats[category]
    : globalDefaults;

// Ikon komponensek
const icons: Record<string, string> = {
  shield: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />`,
  wave: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />`,
  zap: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />`,
  clock: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />`,
  layers: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />`,
  heart: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />`,
  palette: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />`,
  pen: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />`,

<section class="py-16 bg-gray-50" id="problema-megoldas">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <span class="inline-block px-4 py-1 bg-red-100 text-red-700 text-sm font-medium rounded-full mb-4">
        Probléma → Megoldás
      </span>
      <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
        {content.headline}
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Nézd meg, hogyan oldja meg a {productName} a leggyakoribb problémákat.
      </p>
    </div>

    <!-- Problems vs Solutions -->
    <div class="grid lg:grid-cols-2 gap-8 mb-16">
      <!-- Problems -->
      <div class="bg-red-50 rounded-2xl p-6 lg:p-8">
        <h3 class="text-xl font-bold text-red-900 mb-6 flex items-center gap-2">
          <svg class="w-6 h-6 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          Ismerd fel a problémát
        </h3>
        <div class="space-y-4">
          {content.problems.map((problem) => (
            <div class="bg-white rounded-xl p-4 border border-red-100">
              <div class="flex gap-4">
                <div class="w-10 h-10 bg-red-100 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={icons[problem.icon] || icons.currency} />
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900 mb-1">{problem.title}</h4>
                  <p class="text-sm text-gray-600">{problem.description}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Solutions -->
      <div class="bg-success-50 rounded-2xl p-6 lg:p-8">
        <h3 class="text-xl font-bold text-success-900 mb-6 flex items-center gap-2">
          <svg class="w-6 h-6 text-success-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          A SkinLab megoldása
        </h3>
        <div class="space-y-4">
          {content.solutions.map((solution) => (
            <div class="bg-white rounded-xl p-4 border border-success-100">
              <div class="flex gap-4">
                <div class="w-10 h-10 bg-success-100 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-success-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={icons[solution.icon] || icons.savings} />
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900 mb-1">{solution.title}</h4>
                  <p class="text-sm text-gray-600">{solution.description}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- Ideal For / Not Ideal For -->
    <div class="grid md:grid-cols-2 gap-8">
      <!-- Ideal For -->
      <div class="bg-white rounded-2xl border border-gray-200 p-6 lg:p-8">
        <h3 class="text-xl font-bold text-gray-900 mb-6 flex items-center gap-2">
          <span class="w-8 h-8 bg-success-100 rounded-full flex items-center justify-center">
            <svg class="w-5 h-5 text-success-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </span>
          Kinek ajánljuk
        </h3>
        <ul class="space-y-3">
          {content.idealFor.map((item) => (
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-success-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-700">{item}</span>
            </li>
          ))}
        </ul>
      </div>

      <!-- Not Ideal For -->
      <div class="bg-white rounded-2xl border border-gray-200 p-6 lg:p-8">
        <h3 class="text-xl font-bold text-gray-900 mb-6 flex items-center gap-2">
          <span class="w-8 h-8 bg-amber-100 rounded-full flex items-center justify-center">
            <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
          </span>
          Mikor nem ajánljuk
        </h3>
        <ul class="space-y-3">
          {content.notIdealFor.map((item) => (
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-amber-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
              </svg>
              <span class="text-gray-700">{item}</span>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</section>

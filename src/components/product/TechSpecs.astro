---
/**
 * TechSpecs - Technikai specifikációk megjelenítése
 * Accordion vagy táblázat formátumban
 */

interface Props {
  specs?: Record<string, string>;
  productName?: string;
  category?: string;
}

const { specs, productName = 'termék', category } = Astro.props;

// Alapértelmezett specs kategóriánként
const defaultSpecs: Record<string, Record<string, string>> = {
  'diodalezerek': {
    'Hullámhossz': '755nm + 808nm + 940nm + 1064nm',
    'Teljesítmény': '1200W - 2400W',
    'Energia': 'Max 120J/cm²',
    'Impulzus frekvencia': '1-10 Hz',
    'Kezelőfej méret': '12x20mm / 15x35mm',
    'Hűtés': 'Szafír kontakt hűtés (-5°C)',
    'Kijelző': '10.4" érintőképernyő',
    'Tápellátás': '220V / 50Hz',
    'Garancia': '2 év',
  },
  'hydrafacial': {
    'Funkciók száma': '6-12 in 1',
    'Vákuum erősség': '0-80 kPa állítható',
    'Kezelőfejek': '4-8 db',
    'Kijelző': '10" HD érintőképernyő',
    'Tápellátás': '220V / 50Hz',
    'Garancia': '2 év',
  },
  'nd-yag-lezerek': {
    'Lézer típus': 'Q-kapcsolt Nd:YAG',
    'Hullámhossz': '1064nm + 532nm',
    'Energia': 'Max 2000mJ',
    'Impulzus szélesség': '6-10ns',
    'Frekvencia': '1-10 Hz',
    'Spotméret': '2-10mm állítható',
    'Hűtés': 'Vízhűtéses + légkondicionáló',
    'Garancia': '2 év',
  },
  'sminktetovalas': {
    'Motor típus': 'Svájci Maxon motor',
    'Fordulatszám': '0-15000 RPM',
    'Működési mód': 'Pen / Direct Drive',
    'Tűmélység': '0-3.5mm állítható',
    'Súly': '< 200g',
    'Garancia': '2 év',
  },
};

// Specs kiválasztása
const displaySpecs = specs && Object.keys(specs).length > 0
  ? specs
  : (category && defaultSpecs[category])
    ? defaultSpecs[category]
    : null;

// Specs csoportosítása (opcionális - ha vannak kategória prefixek)
const specEntries = displaySpecs ? Object.entries(displaySpecs) : [];
---

{specEntries.length > 0 && (
  <section class="py-12 lg:py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="text-center mb-10">
        <h2 class="text-2xl lg:text-3xl font-bold text-gray-900 mb-3">
          Technikai specifikációk
        </h2>
        <p class="text-gray-600">
          A {productName} részletes műszaki adatai
        </p>
      </div>

      <!-- Specs Table -->
      <div class="bg-gray-50 rounded-2xl overflow-hidden border border-gray-200">
        <dl class="divide-y divide-gray-200">
          {specEntries.map(([key, value], index) => (
            <div class:list={[
              "flex flex-col sm:flex-row sm:items-center px-6 py-4",
              index % 2 === 0 ? "bg-white" : "bg-gray-50"
            ]}>
              <dt class="text-sm font-semibold text-gray-900 sm:w-1/3 mb-1 sm:mb-0">
                {key}
              </dt>
              <dd class="text-sm text-gray-600 sm:w-2/3">
                {value}
              </dd>
            </div>
          ))}
        </dl>
      </div>

      <!-- Download spec sheet CTA -->
      <div class="mt-8 text-center">
        <a
          href="/kapcsolat"
          class="inline-flex items-center gap-2 text-primary-600 hover:text-primary-700 font-semibold transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          A gyári adatlap letöltése
        </a>
      </div>
    </div>
  </section>
)}

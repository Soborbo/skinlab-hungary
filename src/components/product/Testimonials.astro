    rating: 5,
  },
  {
    name: 'Fekete Judit',
    role: 'Kozmetikus',
    location: 'Kecskemét',
    text: 'Már több gépet is vettem tőlük. Megbízhatóak, a garancia valódi biztonságot jelent, és az árak korrektek.',
    rating: 5,
  },
  {
    name: 'Király Brigitta',
    role: 'Beauty szalon vezető',
    location: 'Miskolc',

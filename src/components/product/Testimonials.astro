    rating: 5,
  },
];

// Vélemények kiválasztása
const displayTestimonials = testimonials && testimonials.length > 0
  ? testimonials
  : (category && defaultTestimonials[category])
    ? defaultTestimonials[category]
    : globalDefaultTestimonials;

// Star rating component
const renderStars = (rating: number = 5) => {
  return Array(5).fill(0).map((_, i) => i < rating ? 'filled' : 'empty');
};
---

{displayTestimonials.length > 0 && (
  <section class="py-12 lg:py-16 bg-gray-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="text-center mb-10">
        <h2 class="text-2xl lg:text-3xl font-bold text-gray-900 mb-3">
          Ügyfeleink mondták
        </h2>
        <p class="text-gray-600">
          Valódi visszajelzések a {productName} gépről
        </p>
      </div>

      <!-- Testimonials Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {displayTestimonials.slice(0, 3).map((testimonial) => (
          <div class="bg-white rounded-2xl p-6 shadow-sm hover:shadow-md transition-shadow border border-gray-100 flex flex-col h-full">
            <!-- Stars -->
            <div class="flex gap-1 mb-4">
              {renderStars(testimonial.rating).map((star) => (
                <svg
                  class={`w-5 h-5 ${star === 'filled' ? 'text-yellow-400' : 'text-gray-200'}`}
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>

            <!-- Quote -->
            <blockquote class="text-gray-700 leading-relaxed flex-grow">
              "{testimonial.text}"
            </blockquote>

            <!-- Author - always at bottom -->
            <div class="flex items-center gap-3 mt-6 pt-4 border-t border-gray-100">
              {testimonial.image ? (
                <img
                  src={testimonial.image}
                  alt={testimonial.name}
                  class="w-12 h-12 rounded-full object-cover"
                />
              ) : (
                <div class="w-12 h-12 rounded-full bg-primary-100 flex items-center justify-center shrink-0">
                  <span class="text-primary-600 font-semibold text-lg">
                    {testimonial.name.charAt(0)}
                  </span>
                </div>
              )}
              <div>
                <div class="font-semibold text-gray-900">{testimonial.name}</div>
                <div class="text-sm text-gray-500">
                  {testimonial.role}{testimonial.location && `, ${testimonial.location}`}
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- Trust indicator -->
      <div class="mt-10 text-center">
        <div class="inline-flex items-center gap-2 text-gray-600">
          <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span>150+ elégedett szalon használja gépeinket</span>
        </div>
      </div>
    </div>
  </section>
)}

---
/**
 * Testimonials - Vásárlói vélemények szekció
 * Carousel vagy grid megjelenítés
 */

interface Testimonial {
  name: string;
  role?: string;
  location?: string;
  text: string;
  rating?: number;
  image?: string;
}

interface Props {
  testimonials?: Testimonial[];
  productName?: string;
  category?: string;
}

const { testimonials, productName = 'termék', category } = Astro.props;


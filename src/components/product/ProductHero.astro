---
/**
 * ProductHero - Product hero section with gallery and product info
 *
 * Features:
 * - Product gallery integration
 * - Variant selection
 * - Price display with installment option
 * - Trust badges
 * - CTA buttons (consultation + phone)
 * - Availability badge
 */
import ProductGallery from './ProductGallery.astro';
import { TRUST_BADGES, CONTACT } from '@/lib/constants';

interface Variant {
  sku: string;
  name: string;
  value: string;
  price: number | null;
  image?: string;
}

interface Props {
  /** Product name */
  name: string;
  /** Product SKU */
  sku: string;
  /** Short description */
  shortDescription?: string;
  /** Full description (fallback) */
  description?: string;
  /** Price in HUF (null = request quote) */
  price: number | null;
  /** Main product image path */
  image: string;
  /** Gallery image paths */
  gallery: string[];
  /** YouTube video IDs */
  youtubeVideos?: string[];
  /** Availability status */
  availability: 'in_stock' | 'preorder' | 'out_of_stock';
  /** Has variants */
  hasVariants: boolean;
  /** Variant list */
  variants: Variant[];
  /** Featured product badge */
  featured?: boolean;
  /** Category slug for consultation link */
  categorySlug: string;
}

const {
  name,
  sku,
  shortDescription,
  description,
  price,
  image,
  gallery,
  youtubeVideos,
  availability,
  hasVariants,
  variants,
  featured,
  categorySlug,
} = Astro.props;

// Format price
const formatPrice = (p: number | null) => {
  if (!p) return null;
  return new Intl.NumberFormat('hu-HU').format(p) + ' Ft';
};

// Availability info
const availabilityInfo = {
  in_stock: { label: 'Raktáron', color: 'success', icon: 'check' },
  preorder: { label: 'Előrendelhető', color: 'amber', icon: 'clock' },
  out_of_stock: { label: 'Nem elérhető', color: 'gray', icon: 'x' },
};
const availStatus = availabilityInfo[availability];

// All images for gallery
const allImages = [image, ...gallery].filter(Boolean);

// Trust badge icons
const icons: Record<string, string> = {
  'shield-check': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />`,
  'truck': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0" />`,
  'graduation-cap': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222" />`,
  'wrench': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />`,
};
---

<section class="bg-white py-8 lg:py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-10 lg:gap-16">

      <!-- Media Gallery -->
      <ProductGallery
        images={allImages}
        productName={name}
        badges={{
          featured: featured,
          variantCount: hasVariants ? variants.length : undefined
        }}
      />

      <!-- Product Info -->
      <div>
        <!-- Availability Badge -->
        <div class:list={[
          'inline-flex items-center gap-2 px-3 py-1 rounded-full text-sm font-medium mb-4',
          availStatus.color === 'success' && 'bg-green-50 text-green-600',
          availStatus.color === 'amber' && 'bg-amber-50 text-amber-600',
          availStatus.color === 'gray' && 'bg-gray-100 text-gray-600',
        ]}>
          {availStatus.icon === 'check' && (
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
          )}
          {availStatus.icon === 'clock' && (
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          )}
          {availStatus.icon === 'x' && (
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          )}
          {availStatus.label}
        </div>

        <h1 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
          {name}
        </h1>

        <p class="text-lg text-gray-600 mb-6">
          {shortDescription || description?.slice(0, 200)}
        </p>

        <!-- Variants (if any) -->
        {hasVariants && variants.length > 0 && (
          <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Válassz variációt:
            </label>
            <div class="flex flex-wrap gap-2" data-variant-selector>
              {variants.map((variant, i) => (
                <button
                  type="button"
                  class:list={[
                    'px-4 py-2 rounded-lg border-2 text-sm font-medium transition-all',
                    i === 0
                      ? 'border-primary-600 bg-primary-50 text-primary-700'
                      : 'border-gray-200 hover:border-primary-300 text-gray-700'
                  ]}
                  data-variant={variant.sku}
                  data-variant-price={variant.price}
                  data-variant-image={variant.image}
                >
                  {variant.name}
                </button>
              ))}
            </div>
          </div>
        )}

        <!-- Price -->
        <div class="mb-6" data-price-display>
          {price ? (
            <>
              <div class="text-3xl font-bold text-gray-900" data-price-value>{formatPrice(price)}</div>
              <div class="text-sm text-gray-500 mt-1">Bruttó ár (ÁFA-val)</div>
              <div class="text-green-600 font-medium mt-2" data-installment>
                vagy havi ~{formatPrice(Math.round(price / 12))} részletfizetéssel
              </div>
            </>
          ) : (
            <div class="text-2xl font-bold text-primary-600">Kérjen egyedi ajánlatot!</div>
          )}
        </div>

        <!-- Trust badges mini -->
        <div class="grid grid-cols-2 gap-3 mb-8">
          {TRUST_BADGES.map((badge) => (
            <div class="flex items-center gap-2 text-sm">
              <svg class="w-5 h-5 text-primary-600 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={icons[badge.icon]} />
              <span class="text-gray-700">{badge.title}</span>
            </div>
          ))}
        </div>

        <!-- CTAs -->
        <div class="flex flex-col sm:flex-row gap-3">
          <a
            href={`/kapcsolat?product=${categorySlug}`}
            class="flex-1 inline-flex items-center justify-center gap-2 px-6 py-3 rounded-lg bg-primary-600 text-white font-semibold hover:bg-primary-700 transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
            Ingyenes konzultáció
          </a>
          <a
            href={CONTACT.phoneTel}
            class="flex-1 inline-flex items-center justify-center gap-2 px-6 py-3 rounded-lg border-2 border-gray-300 text-gray-700 font-semibold hover:bg-gray-50 transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            {CONTACT.phoneDisplay}
          </a>
        </div>

        <!-- SKU -->
        <p class="mt-6 text-xs text-gray-400">
          Cikkszám: {sku}
        </p>
      </div>
    </div>
  </div>
</section>

<!-- Variant selection script -->
<script>
  document.querySelectorAll('[data-variant-selector]').forEach((selector) => {
    const buttons = selector.querySelectorAll('[data-variant]');
    const priceEl = document.querySelector('[data-price-value]');
    const installmentEl = document.querySelector('[data-installment]');

    buttons.forEach((btn) => {
      btn.addEventListener('click', () => {
        // Update active state
        buttons.forEach((b) => {
          b.classList.remove('border-primary-600', 'bg-primary-50', 'text-primary-700');
          b.classList.add('border-gray-200', 'text-gray-700');
        });
        btn.classList.add('border-primary-600', 'bg-primary-50', 'text-primary-700');
        btn.classList.remove('border-gray-200', 'text-gray-700');

        // Update price if variant has different price
        const variantPrice = btn.getAttribute('data-variant-price');
        if (variantPrice && priceEl) {
          const price = parseInt(variantPrice, 10);
          priceEl.textContent = new Intl.NumberFormat('hu-HU').format(price) + ' Ft';
          if (installmentEl) {
            installmentEl.textContent = `vagy havi ~${new Intl.NumberFormat('hu-HU').format(Math.round(price / 12))} Ft részletfizetéssel`;
          }
        }

        // Trigger gallery image change if variant has image
        const variantImage = btn.getAttribute('data-variant-image');
        if (variantImage) {
          const event = new CustomEvent('variant-image-change', { detail: { image: variantImage } });
          document.dispatchEvent(event);
        }
      });
    });
  });
</script>

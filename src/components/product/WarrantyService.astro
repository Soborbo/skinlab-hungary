---
/**
 * WarrantyService - Garancia és szerviz szekció
 *
 * Bemutatja a SkinLab garanciális és szerviz előnyeit:
 * - 2 év garancia (dupla iparági standard)
 * - Saját szervizműhely
 * - Cseregép program
 * - Gyors javítási idő
 */

interface Props {
  productName?: string;
  /** Override default warranty years */
  warrantyYears?: number;
  /** Show extended warranty option */
  showExtendedWarranty?: boolean;
}

const {
  productName,
  warrantyYears = 2,
  showExtendedWarranty = false
} = Astro.props;

// Warranty features
const warrantyFeatures = [
  {
    icon: 'shield',
    title: `${warrantyYears} év teljes garancia`,
    description: 'Minden alkatrészre és munkadíjra, az iparági standard duplája.',
    highlight: true
  },
  {
    icon: 'refresh',
    title: 'Cseregép program',
    description: 'Javítás idejére ingyenes cseregépet biztosítunk, hogy ne álljon a munkád.',
    highlight: false
  },
  {
    icon: 'tool',
    title: 'Saját szervizműhely',
    description: 'Magyarországi javítás, nem kell hónapokat várni külföldi szervizre.',
    highlight: false
  },
  {
    icon: 'clock',
    title: 'Gyors javítás',
    description: 'A legtöbb hibát 3-5 munkanapon belül kijavítjuk.',
    highlight: false
  }
];

// Service process steps
const serviceSteps = [
  {
    step: 1,
    title: 'Hibabejelentés',
    description: 'Hívj minket vagy írj emailt a hiba leírásával.'
  },
  {
    step: 2,
    title: 'Cseregép',
    description: 'Futárral küldünk cseregépet, viszik a hibásat.'
  },
  {
    step: 3,
    title: 'Javítás',
    description: 'Saját műhelyünkben megjavítjuk a készüléked.'
  },
  {
    step: 4,
    title: 'Visszaküldés',
    description: 'Visszakapod a javított gépet, visszavesszük a cserét.'
  }
];

// Icon paths
const icons: Record<string, string> = {
  shield: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />`,
  refresh: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />`,
  tool: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />`,
  clock: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />`,
  check: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />`
};
---

<section class="py-16 bg-gradient-to-b from-gray-50 to-white" id="garancia">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <span class="inline-block px-4 py-1 bg-success-100 text-success-700 text-sm font-medium rounded-full mb-4">
        Nyugalom és biztonság
      </span>
      <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
        Garancia és szerviz
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        {productName
          ? `A ${productName} készülékre ${warrantyYears} év teljes garanciát adunk, saját magyarországi szervizháttérrel.`
          : `${warrantyYears} év teljes garancia minden készülékre, saját magyarországi szervizháttérrel.`
        }
      </p>
    </div>

    <!-- Warranty Features Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-16">
      {warrantyFeatures.map((feature) => (
        <div
          class:list={[
            'relative p-6 rounded-2xl transition-all duration-300',
            feature.highlight
              ? 'bg-primary-600 text-white shadow-xl shadow-primary-600/20'
              : 'bg-white border border-gray-200 hover:border-primary-200 hover:shadow-lg'
          ]}
        >
          {/* Icon */}
          <div
            class:list={[
              'w-12 h-12 rounded-xl flex items-center justify-center mb-4',
              feature.highlight ? 'bg-white/20' : 'bg-primary-50'
            ]}
          >
            <svg
              class:list={[
                'w-6 h-6',
                feature.highlight ? 'text-white' : 'text-primary-600'
              ]}
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              set:html={icons[feature.icon]}
            />
          </div>

          {/* Content */}
          <h3
            class:list={[
              'text-lg font-bold mb-2',
              feature.highlight ? 'text-white' : 'text-gray-900'
            ]}
          >
            {feature.title}
          </h3>
          <p
            class:list={[
              'text-sm',
              feature.highlight ? 'text-primary-100' : 'text-gray-600'
            ]}
          >
            {feature.description}
          </p>

          {/* Highlight badge */}
          {feature.highlight && (
            <div class="absolute -top-3 -right-3 bg-amber-400 text-amber-900 text-xs font-bold px-3 py-1 rounded-full shadow-lg">
              2x iparági standard
            </div>
          )}
        </div>
      ))}
    </div>

    <!-- Service Process -->
    <div class="bg-white rounded-3xl border border-gray-200 p-8 lg:p-12">
      <h3 class="text-2xl font-bold text-gray-900 text-center mb-8">
        Hogyan működik a szerviz?
      </h3>

      <!-- Desktop Grid with Connecting Line -->
      <div class="hidden md:grid md:grid-cols-4 gap-8 relative">
        {/* Connecting line - hidden on mobile */}
        <div class="absolute top-8 left-[12.5%] right-[12.5%] h-0.5 bg-gray-200" aria-hidden="true">
          <div class="absolute inset-0 bg-gradient-to-r from-primary-500 via-primary-500 to-transparent" style="width: 75%;" />
        </div>

        {serviceSteps.map((step, index) => (
          <div class="relative text-center">
            {/* Step number */}
            <div
              class:list={[
                'w-16 h-16 mx-auto rounded-full flex items-center justify-center text-2xl font-bold mb-4 relative z-10',
                index < 3 ? 'bg-primary-600 text-white' : 'bg-gray-100 text-gray-400'
              ]}
            >
              {step.step}
            </div>

            {/* Content */}
            <h4 class="font-bold text-gray-900 mb-2">{step.title}</h4>
            <p class="text-sm text-gray-600">{step.description}</p>
          </div>
        ))}
      </div>

      <!-- Mobile Horizontal Scroll Carousel -->
      <div class="md:hidden relative mt-8">
        {/* Scroll hint arrow on the right */}
        <div
          class="absolute right-0 top-0 bottom-8 w-16 bg-gradient-to-l from-white via-white/80 to-transparent z-10 pointer-events-none flex items-center justify-end pr-2 transition-opacity duration-300"
          data-scroll-hint-service
        >
          <div class="animate-bounce-x-service">
            <svg class="w-6 h-6 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </div>
        </div>

        {/* Scrollable container */}
        <div
          class="flex gap-4 overflow-x-auto pb-4 snap-x snap-mandatory scrollbar-hide -mx-4 px-4"
          data-service-scroll
        >
          {serviceSteps.map((step, index) => (
            <div class="flex-shrink-0 w-[75%] snap-start bg-white rounded-xl border border-gray-200 p-6 text-center">
              {/* Step number circle */}
              <div
                class:list={[
                  'w-14 h-14 mx-auto rounded-full flex items-center justify-center text-xl font-bold mb-3',
                  index < 3 ? 'bg-primary-600 text-white' : 'bg-gray-100 text-gray-400'
                ]}
              >
                {step.step}
              </div>
              <h4 class="font-bold text-gray-900 mb-2">{step.title}</h4>
              <p class="text-sm text-gray-600">{step.description}</p>
            </div>
          ))}
        </div>

        {/* Dot indicators */}
        <div class="flex justify-center gap-1.5 mt-4" data-scroll-dots-service>
          {serviceSteps.map((_, index) => (
            <div
              class:list={[
                'h-2 rounded-full transition-all duration-300',
                index === 0 ? 'bg-primary-600 w-4' : 'bg-gray-300 w-2'
              ]}
              data-dot-service={index}
            />
          ))}
        </div>
      </div>
    </div>

    {/* Extended Warranty Option */}
    {showExtendedWarranty && (
      <div class="mt-8 bg-amber-50 border border-amber-200 rounded-2xl p-6 flex flex-col md:flex-row items-center justify-between gap-4">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 bg-amber-100 rounded-xl flex items-center justify-center flex-shrink-0">
            <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div>
            <h4 class="font-bold text-amber-900">Kiterjesztett garancia</h4>
            <p class="text-sm text-amber-700">
              Hosszabbítsd meg a garanciát további 1 évvel kedvezményes áron!
            </p>
          </div>
        </div>
        <a
          href="/kapcsolat?tema=garancia"
          class="inline-flex items-center gap-2 px-6 py-3 bg-amber-500 text-white font-semibold rounded-xl hover:bg-amber-600 transition-colors whitespace-nowrap"
        >
          Érdeklődöm
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
    )}

    {/* Comparison with competitors */}
    <div class="mt-12 overflow-x-auto">
      <table class="w-full text-left">
        <thead>
          <tr class="border-b border-gray-200">
            <th class="py-4 pr-4 text-gray-500 font-medium">Összehasonlítás</th>
            <th class="py-4 px-4 text-center">
              <span class="inline-block px-3 py-1 bg-primary-100 text-primary-700 font-bold rounded-full text-sm">
                SkinLab
              </span>
            </th>
            <th class="py-4 px-4 text-center text-gray-400 font-medium">
              Iparági átlag
            </th>
          </tr>
        </thead>
        <tbody class="text-sm">
          <tr class="border-b border-gray-100">
            <td class="py-4 pr-4 text-gray-700">Garancia időtartam</td>
            <td class="py-4 px-4 text-center">
              <span class="font-bold text-primary-600">{warrantyYears} év</span>
            </td>
            <td class="py-4 px-4 text-center text-gray-400">1 év</td>
          </tr>
          <tr class="border-b border-gray-100">
            <td class="py-4 pr-4 text-gray-700">Szerviz helyszíne</td>
            <td class="py-4 px-4 text-center">
              <span class="font-bold text-primary-600">Magyarország</span>
            </td>
            <td class="py-4 px-4 text-center text-gray-400">Kína</td>
          </tr>
          <tr class="border-b border-gray-100">
            <td class="py-4 pr-4 text-gray-700">Cseregép</td>
            <td class="py-4 px-4 text-center">
              <svg class="w-5 h-5 text-success-500 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={icons.check} />
            </td>
            <td class="py-4 px-4 text-center">
              <svg class="w-5 h-5 text-gray-300 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </td>
          </tr>
          <tr class="border-b border-gray-100">
            <td class="py-4 pr-4 text-gray-700">Javítási idő</td>
            <td class="py-4 px-4 text-center">
              <span class="font-bold text-primary-600">3-5 nap</span>
            </td>
            <td class="py-4 px-4 text-center text-gray-400">2-3 hónap</td>
          </tr>
          <tr>
            <td class="py-4 pr-4 text-gray-700">Magyar nyelvű támogatás</td>
            <td class="py-4 px-4 text-center">
              <svg class="w-5 h-5 text-success-500 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={icons.check} />
            </td>
            <td class="py-4 px-4 text-center">
              <svg class="w-5 h-5 text-gray-300 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</section>

<style>
  /* Hide scrollbar for carousel */
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }

  /* Horizontal bounce animation for scroll hint arrow */
  @keyframes bounce-x-service {
    0%, 100% {
      transform: translateX(0);
    }
    50% {
      transform: translateX(4px);
    }
  }
  .animate-bounce-x-service {
    animation: bounce-x-service 1s ease-in-out infinite;
  }
</style>

<script>
  function initServiceScroll() {
    document.querySelectorAll('[data-service-scroll]').forEach(container => {
      const scrollHint = container.parentElement?.querySelector('[data-scroll-hint-service]');
      const dots = container.parentElement?.querySelectorAll('[data-dot-service]');
      const cards = container.querySelectorAll(':scope > div');

      if (!cards.length) return;

      const cardWidth = (cards[0] as HTMLElement).offsetWidth + 16; // card width + gap

      container.addEventListener('scroll', () => {
        const scrollLeft = (container as HTMLElement).scrollLeft;

        // Hide scroll hint after user starts scrolling
        if (scrollHint) {
          (scrollHint as HTMLElement).style.opacity = scrollLeft > 20 ? '0' : '1';
        }

        // Update dot indicators
        if (dots) {
          const activeIndex = Math.round(scrollLeft / cardWidth);
          dots.forEach((dot, index) => {
            dot.classList.toggle('bg-primary-600', index === activeIndex);
            dot.classList.toggle('w-4', index === activeIndex);
            dot.classList.toggle('bg-gray-300', index !== activeIndex);
            dot.classList.toggle('w-2', index !== activeIndex);
          });
        }
      });
    });
  }

  // Initialize on page load
  initServiceScroll();

  // Re-initialize after Astro page transitions
  document.addEventListener('astro:after-swap', initServiceScroll);
</script>

---
/**
 * RelatedProducts - Kapcsolódó termékek szekció
 * Ugyanabból a kategóriából mutat más termékeket
 */

import { getCollection } from 'astro:content';
import { CATEGORIES } from '../../lib/constants';

interface Props {
  currentSlug: string;
  categorySlug: string;
  maxProducts?: number;
}

const { currentSlug, categorySlug, maxProducts = 4 } = Astro.props;

// Get category info
const category = CATEGORIES.find(c => c.slug === categorySlug);
const categoryName = category?.nameShort || categorySlug;

// Fetch other products from the same category
const allProducts = await getCollection('products', ({ data }) => {
  return data.categorySlug === categorySlug && data.slug !== currentSlug;
});

// Sort by featured first, then take maxProducts
const relatedProducts = allProducts
  .sort((a, b) => {
    if (a.data.featured && !b.data.featured) return -1;
    if (!a.data.featured && b.data.featured) return 1;
    return 0;
  })
  .slice(0, maxProducts);

// Format price
const formatPrice = (price: number | null) => {
  if (!price) return 'Kérjen ajánlatot';
  return new Intl.NumberFormat('hu-HU').format(price) + ' Ft';
};

// Helper to get image path
const getImagePath = (image: string) => {
  if (!image) return null;
  // Handle @assets paths
  if (image.startsWith('@assets/')) {
    return '/' + image.replace('@assets/', 'assets/');
  }
  return image.startsWith('/') ? image : `/${image}`;
};
---

{relatedProducts.length > 0 && (
  <section class="py-12 lg:py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="text-center mb-10">
        <h2 class="text-2xl lg:text-3xl font-bold text-gray-900 mb-3">
          További {categoryName} termékek
        </h2>
        <p class="text-gray-600">
          Fedezd fel a többi professzionális készülékünket
        </p>
      </div>

      <!-- Products Grid -->
      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {relatedProducts.map((product) => {
          const imagePath = getImagePath(product.data.image);
          const productUrl = `/${product.data.categorySlug}/${product.data.slug}`;

          return (
            <a
              href={productUrl}
              class="group bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-lg transition-all duration-300 border border-gray-100 flex flex-col h-full"
            >
              <!-- Image -->
              <div class="relative aspect-square bg-gradient-to-br from-gray-50 to-gray-100 overflow-hidden">
                {imagePath ? (
                  <img
                    src={imagePath}
                    alt={product.data.name}
                    class="w-full h-full object-contain p-4 group-hover:scale-105 transition-transform duration-300"
                    loading="lazy"
                  />
                ) : (
                  <div class="absolute inset-0 flex items-center justify-center">
                    <svg class="w-16 h-16 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                  </div>
                )}

                {/* Featured badge */}
                {product.data.featured && (
                  <span class="absolute top-3 left-3 bg-red-500 text-white text-xs font-bold px-2 py-1 rounded-full">
                    BESTSELLER
                  </span>
                )}

                {/* Availability badge */}
                {product.data.availability === 'in_stock' && (
                  <span class="absolute top-3 right-3 bg-success-500 text-white text-xs font-medium px-2 py-1 rounded-full">
                    Raktáron
                  </span>
                )}
              </div>

              <!-- Content -->
              <div class="p-4 flex flex-col flex-grow">
                <h3 class="font-semibold text-gray-900 mb-2 line-clamp-2 group-hover:text-primary-600 transition-colors">
                  {product.data.name}
                </h3>

                {product.data.shortDescription && (
                  <p class="text-sm text-gray-500 mb-3 line-clamp-2 flex-grow">
                    {product.data.shortDescription}
                  </p>
                )}

                <div class="mt-auto">
                  <div class="text-lg font-bold text-gray-900">
                    {formatPrice(product.data.price)}
                  </div>

                  <div class="mt-3 flex items-center text-sm font-medium text-primary-600 group-hover:text-primary-700">
                    <span>Részletek</span>
                    <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </div>
                </div>
              </div>
            </a>
          );
        })}
      </div>

      <!-- View All CTA -->
      <div class="mt-10 text-center">
        <a
          href={`/${categorySlug}`}
          class="inline-flex items-center gap-2 px-6 py-3 bg-white border-2 border-gray-200 rounded-xl font-semibold text-gray-700 hover:border-primary-500 hover:text-primary-600 transition-colors"
        >
          Összes {categoryName} termék
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>
)}

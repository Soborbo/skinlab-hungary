---
/**
 * ComparisonTable - Termek osszehasonlitas versenytarsakkal
 *
 * Kategoriankent eltero osszehasonlitasi szempontok
 */

interface ComparisonRow {
  feature: string;
  skinlab: string | boolean;
  competitor: string | boolean;
  highlight?: boolean;
}

interface Props {
  productName: string;
  category: string;
  customComparison?: ComparisonRow[];
  competitorName?: string;
}

const { productName, category, customComparison, competitorName = 'Versenytars' } = Astro.props;

// Category-specific comparison data (shortened versions with 5-7 rows)
const categoryComparisons: Record<string, ComparisonRow[]> = {
  'diodalezerek': [
    { feature: 'Hullamhosszak szama', skinlab: '4 (755+808+940+1064nm)', competitor: '1-2', highlight: true },
    { feature: 'Teljesitmeny', skinlab: '1200-2000W', competitor: '800-1200W', highlight: true },
    { feature: 'Ar', skinlab: '~2M Ft', competitor: '5-10M Ft', highlight: true },
    { feature: 'Garancia', skinlab: '2 ev', competitor: '1 ev' },
    { feature: 'Betanitas', skinlab: true, competitor: 'Fizetos' },
    { feature: 'Magyar szerviz', skinlab: true, competitor: false },
  ],
  'nd-yag-lezerek': [
    { feature: 'Technologia', skinlab: 'Q-switched ND:YAG', competitor: 'Hagyomanyos lezer', highlight: true },
    { feature: 'Energiaszint', skinlab: '800-2000mJ', competitor: '400-800mJ', highlight: true },
    { feature: 'Ar', skinlab: '~1.5M Ft', competitor: '4-8M Ft', highlight: true },
    { feature: 'Garancia', skinlab: '2 ev', competitor: '1 ev' },
    { feature: 'Magyar szerviz', skinlab: true, competitor: false },
  ],
  'hydrafacial': [
    { feature: 'Funkciok szama', skinlab: '8-12 az 1-ben', competitor: '3-5', highlight: true },
    { feature: 'Ar', skinlab: '~500e Ft', competitor: '1-2M Ft', highlight: true },
    { feature: 'Garancia', skinlab: '2 ev', competitor: '1 ev' },
    { feature: 'Magyar szerviz', skinlab: true, competitor: false },
  ],
  'hiemt': [
    { feature: 'Technologia', skinlab: 'HIEMT + EMS + RF', competitor: 'Csak EMS', highlight: true },
    { feature: 'Kezelopadok', skinlab: '4 db', competitor: '2 db', highlight: true },
    { feature: 'Ar', skinlab: '~2M Ft', competitor: '5-8M Ft', highlight: true },
    { feature: 'Garancia', skinlab: '2 ev', competitor: '1 ev' },
    { feature: 'Magyar szerviz', skinlab: true, competitor: false },
  ],
};

// Get comparison data
const comparisonData = customComparison || categoryComparisons[category] || categoryComparisons['diodalezerek'];
const showComparison = comparisonData && comparisonData.length > 0;
---

{showComparison && (
  <section class="py-16 bg-white" id="osszehasonlitas">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Section Header -->
      <div class="text-center mb-12">
        <span class="inline-block px-4 py-1 bg-primary-100 text-primary-700 text-sm font-medium rounded-full mb-4">
          Miert minket valassz?
        </span>
        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
          SkinLab vs {competitorName}
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Nezd meg, miert valasztjak kozmetikusok szazai a {productName} keszuleket a dragabb alternativak helyett.
        </p>
      </div>

      <!-- Desktop Table -->
      <div class="hidden md:block overflow-hidden rounded-2xl border border-gray-200 shadow-lg">
        <table class="w-full">
          <thead>
            <tr class="bg-gray-50">
              <th class="py-5 px-6 text-left text-sm font-medium text-gray-500 w-1/3">
                Tulajdonsag
              </th>
              <th class="py-5 px-6 text-center w-1/3">
                <div class="inline-flex items-center gap-2">
                  <span class="w-8 h-8 bg-primary-600 rounded-lg flex items-center justify-center">
                    <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                  </span>
                  <span class="font-bold text-primary-600">SkinLab</span>
                </div>
              </th>
              <th class="py-5 px-6 text-center text-sm font-medium text-gray-400 w-1/3">
                {competitorName}
              </th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100">
            {comparisonData.map((row, index) => (
              <tr class:list={[
                'transition-colors',
                row.highlight ? 'bg-primary-50/50' : index % 2 === 0 ? 'bg-white' : 'bg-gray-50/50'
              ]}>
                <td class="py-4 px-6">
                  <span class:list={[
                    'font-medium',
                    row.highlight ? 'text-primary-900' : 'text-gray-700'
                  ]}>
                    {row.feature}
                  </span>
                  {row.highlight && (
                    <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-primary-100 text-primary-700">
                      Fontos
                    </span>
                  )}
                </td>
                <td class="py-4 px-6 text-center">
                  {typeof row.skinlab === 'boolean' ? (
                    row.skinlab ? (
                      <span class="inline-flex items-center justify-center w-8 h-8 bg-success-100 rounded-full">
                        <svg class="w-5 h-5 text-success-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                      </span>
                    ) : (
                      <span class="inline-flex items-center justify-center w-8 h-8 bg-gray-100 rounded-full">
                        <svg class="w-5 h-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                      </span>
                    )
                  ) : (
                    <span class:list={[
                      'font-semibold',
                      row.highlight ? 'text-primary-700' : 'text-gray-900'
                    ]}>
                      {row.skinlab}
                    </span>
                  )}
                </td>
                <td class="py-4 px-6 text-center">
                  {typeof row.competitor === 'boolean' ? (
                    row.competitor ? (
                      <span class="inline-flex items-center justify-center w-8 h-8 bg-success-100 rounded-full">
                        <svg class="w-5 h-5 text-success-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                      </span>
                    ) : (
                      <span class="inline-flex items-center justify-center w-8 h-8 bg-red-50 rounded-full">
                        <svg class="w-5 h-5 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                      </span>
                    )
                  ) : (
                    <span class="text-gray-500">{row.competitor}</span>
                  )}
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>

      <!-- Mobile Horizontal Scroll Cards -->
      <div class="md:hidden relative">
        <!-- Scroll hint arrow -->
        <div
          class="absolute right-0 top-0 bottom-8 w-16 bg-gradient-to-l from-white via-white/80 to-transparent z-10 pointer-events-none flex items-center justify-end pr-2 transition-opacity duration-300"
          data-scroll-hint-comparison
        >
          <div class="animate-bounce-x">
            <svg class="w-6 h-6 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </div>
        </div>

        <!-- Scrollable cards container -->
        <div
          class="flex gap-4 overflow-x-auto pb-4 snap-x snap-mandatory scrollbar-hide -mx-4 px-4"
          data-comparison-scroll
        >
          {comparisonData.map((row) => (
            <div class:list={[
              'flex-shrink-0 w-[85%] snap-start rounded-xl border p-4',
              row.highlight ? 'border-primary-200 bg-primary-50' : 'border-gray-200 bg-white'
            ]}>
              <div class="flex items-center justify-between mb-3">
                <span class:list={[
                  'font-medium',
                  row.highlight ? 'text-primary-900' : 'text-gray-700'
                ]}>
                  {row.feature}
                </span>
                {row.highlight && (
                  <span class="px-2 py-0.5 rounded text-xs font-medium bg-primary-100 text-primary-700">
                    Fontos
                  </span>
                )}
              </div>
              <div class="grid grid-cols-2 gap-4">
                <!-- SkinLab value -->
                <div class="text-center p-3 bg-white rounded-lg border border-primary-200">
                  <div class="text-xs text-primary-600 font-medium mb-1">SkinLab</div>
                  {typeof row.skinlab === 'boolean' ? (
                    row.skinlab ? (
                      <svg class="w-6 h-6 text-success-500 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                    ) : (
                      <svg class="w-6 h-6 text-gray-400 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                      </svg>
                    )
                  ) : (
                    <span class="font-semibold text-primary-700 text-sm">{row.skinlab}</span>
                  )}
                </div>
                <!-- Competitor value -->
                <div class="text-center p-3 bg-gray-50 rounded-lg">
                  <div class="text-xs text-gray-500 font-medium mb-1">{competitorName}</div>
                  {typeof row.competitor === 'boolean' ? (
                    row.competitor ? (
                      <svg class="w-6 h-6 text-success-500 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                    ) : (
                      <svg class="w-6 h-6 text-red-400 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                      </svg>
                    )
                  ) : (
                    <span class="text-gray-600 text-sm">{row.competitor}</span>
                  )}
                </div>
              </div>
            </div>
          ))}
        </div>

        <!-- Scroll dots -->
        <div class="flex justify-center gap-1.5 mt-4" data-scroll-dots-comparison>
          {comparisonData.map((_, index) => (
            <div
              class:list={[
                'h-2 rounded-full transition-all duration-300',
                index === 0 ? 'bg-primary-600 w-4' : 'bg-gray-300 w-2'
              ]}
              data-dot-comparison={index}
            />
          ))}
        </div>
      </div>

      <!-- Bottom CTA -->
      <div class="mt-10 text-center">
        <p class="text-gray-600 mb-4">
          Kerdesed van? Szivesen segitunk a dontesben!
        </p>
        <a
          href="/kapcsolat"
          class="inline-flex items-center gap-2 px-6 py-3 bg-primary-600 text-white font-semibold rounded-xl hover:bg-primary-700 transition-colors"
        >
          Kerj szemelyre szabott ajanlatot
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
    </div>
  </section>
)}

<style>
  @keyframes bounce-x {
    0%, 100% {
      transform: translateX(0);
    }
    50% {
      transform: translateX(4px);
    }
  }

  .animate-bounce-x {
    animation: bounce-x 1s ease-in-out infinite;
  }

  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }

  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
</style>

<script>
  function initComparisonScroll() {
    document.querySelectorAll('[data-comparison-scroll]').forEach((container) => {
      const scrollHint = container.parentElement?.querySelector('[data-scroll-hint-comparison]') as HTMLElement | null;
      const dots = container.parentElement?.querySelectorAll('[data-dot-comparison]');
      const cards = container.querySelectorAll(':scope > div');

      if (!cards.length) return;

      const cardWidth = (cards[0] as HTMLElement).offsetWidth + 16;

      container.addEventListener('scroll', () => {
        const scrollLeft = (container as HTMLElement).scrollLeft;

        // Hide scroll hint after scrolling
        if (scrollHint) {
          scrollHint.style.opacity = scrollLeft > 20 ? '0' : '1';
        }

        // Update dot indicators
        if (dots) {
          const activeIndex = Math.round(scrollLeft / cardWidth);
          dots.forEach((dot, index) => {
            dot.classList.toggle('bg-primary-600', index === activeIndex);
            dot.classList.toggle('w-4', index === activeIndex);
            dot.classList.toggle('bg-gray-300', index !== activeIndex);
            dot.classList.toggle('w-2', index !== activeIndex);
          });
        }
      });
    });
  }

  // Initialize on page load
  initComparisonScroll();

  // Re-initialize on Astro page transitions
  document.addEventListener('astro:after-swap', initComparisonScroll);
</script>

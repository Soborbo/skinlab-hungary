---
/**
 * ThirdImage - THIRD pattern for 3-column grids
 * Use: 3-column grids, treatment cards, feature cards, testimonials
 * Pattern: 33vw desktop, 50vw tablet, 100vw mobile
 * 
 * Width calculation:
 * - Mobile 480px × 100vw = 480px → 480, 960 (2x DPR)
 * - Tablet 768px × 50vw = 384px → 480, 768 (2x DPR)
 * - Desktop 1440px × 33vw = 480px → 480, 960 (2x DPR)
 * - Large 1920px × 33vw = 640px → 640, 1280 (2x DPR)
 */
import { Picture } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  src: ImageMetadata;
  alt: string;
  class?: string;
  priority?: boolean;
}

const { src, alt, class: className, priority = false } = Astro.props;

// THIRD pattern - optimized for 33vw with 480 breakpoint
const widths = [320, 480, 640, 960, 1280];
const sizes = '(min-width: 1024px) 33vw, (min-width: 640px) 50vw, 100vw';
---

<Picture
  src={src}
  alt={alt}
  widths={widths}
  sizes={sizes}
  formats={['avif', 'webp', 'jpeg']}
  quality={60}
  class={className}
  loading={priority ? 'eager' : 'lazy'}
  fetchpriority={priority ? 'high' : undefined}
  decoding={priority ? undefined : 'async'}
/>

---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { COMPANY, CONTACT, LOCATIONS } from '../../lib/constants';
import { ContentImage, ThirdImage } from '../../components/images';
import TrainingSignupForm from '../../components/forms/TrainingSignupForm.astro';
import CourseSchema from '../../components/schema/CourseSchema.astro';
import { t, getLocaleFromUrl, type Locale } from '../../i18n/ui';

// Get locale from URL
const locale = getLocaleFromUrl(Astro.url) as Locale;

// Import training images
import trainingHero from '../../assets/training-hero.jpg';
import trainingImg1 from '../../assets/training-1.jpg';
import trainingImg2 from '../../assets/training-2.jpg';
import trainingImg3 from '../../assets/training-3.jpg';
import trainingImg4 from '../../assets/training-4.jpg';
import trainingImg5 from '../../assets/training-5.jpg';
import trainingImg6 from '../../assets/training-6.jpg';

// Gallery images
import galleryImg1 from '../../assets/training-gallery-1.jpg';
import galleryImg2 from '../../assets/training-gallery-2.jpg';
import galleryImg3 from '../../assets/training-gallery-3.jpg';
import galleryImg4 from '../../assets/training-gallery-4.jpg';
import galleryImg5 from '../../assets/training-gallery-5.jpg';
import galleryImg6 from '../../assets/training-gallery-6.jpg';

const trainings = await getCollection('trainings');

// Localized training detail URL prefix
const trainingUrlPrefix = locale === 'hu' ? '/kepzesek' : `/${locale}/kepzesek`;

const galleryImages = [
  { src: galleryImg1, alt: t(locale, 'training.galleryAlt1') },
  { src: galleryImg2, alt: t(locale, 'training.galleryAlt2') },
  { src: galleryImg3, alt: t(locale, 'training.galleryAlt3') },
  { src: galleryImg4, alt: t(locale, 'training.galleryAlt4') },
  { src: galleryImg5, alt: t(locale, 'training.galleryAlt5') },
  { src: galleryImg6, alt: t(locale, 'training.galleryAlt6') },
];
---

<BaseLayout
  title={t(locale, 'training.pageTitle')}
  description={t(locale, 'training.pageDescription')}
>
  <CourseSchema
    name={t(locale, 'training.schemaName')}
    description={t(locale, 'training.schemaDescription')}
    category={t(locale, 'training.schemaCategory')}
    certificate={t(locale, 'training.schemaCertificate')}
    isOverviewPage={true}
  />
  <div id="main-content">

    <!-- Hero with Main Image -->
    <section class="bg-gradient-to-b from-gray-50 to-white py-12 lg:py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-center">
          <!-- Content -->
          <div>
            <div class="inline-flex items-center gap-2 bg-primary-100 text-primary-700 px-3 py-1 rounded-full text-sm font-medium mb-4">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
              </svg>
              {t(locale, 'training.farRegistered')}
            </div>
            <h1 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
              {t(locale, 'training.heroTitle')}
            </h1>
            <p class="text-lg text-gray-600 leading-relaxed mb-6">
              {t(locale, 'training.heroSubtitle')}
            </p>
            <div class="flex flex-wrap gap-4">
              <a
                href="#kepzesek"
                class="inline-flex items-center px-5 py-3 bg-primary-600 text-white font-semibold rounded-xl hover:bg-primary-700 transition-colors"
              >
                {t(locale, 'training.viewTrainings')}
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </a>
              <a
                href={`tel:${CONTACT.phone}`}
                class="inline-flex items-center px-5 py-3 bg-white text-gray-700 font-semibold rounded-xl border-2 border-gray-200 hover:border-primary-300 transition-colors"
              >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                {CONTACT.phoneDisplay}
              </a>
            </div>
          </div>

          <!-- Hero Image -->
          <div class="relative">
            <div class="rounded-2xl overflow-hidden shadow-2xl">
              <ContentImage
                src={trainingHero}
                alt={t(locale, 'training.heroImageAlt')}
                class="w-full h-full object-cover aspect-[4/3]"
              />
            </div>
            <!-- Floating badge -->
            <div class="absolute -bottom-4 -left-4 bg-white rounded-xl shadow-xl p-4 hidden sm:block">
              <div class="flex items-center gap-3">
                <div class="w-12 h-12 bg-success-100 rounded-xl flex items-center justify-center">
                  <svg class="w-6 h-6 text-success-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                  </svg>
                </div>
                <div>
                  <div class="font-bold text-gray-900">{t(locale, 'training.certificate')}</div>
                  <div class="text-sm text-gray-500">{t(locale, 'training.officialTraining')}</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Image Gallery Strip -->
    <section class="py-8 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-3 md:grid-cols-6 gap-2 lg:gap-4">
          {galleryImages.map((img, index) => (
            <div class={`rounded-xl overflow-hidden ${index === 0 ? 'ring-2 ring-primary-500 ring-offset-2' : ''}`}>
              <ThirdImage
                src={img.src}
                alt={img.alt}
                class="w-full aspect-square object-cover hover:scale-105 transition-transform duration-300"
              />
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Key Benefits -->
    <section class="py-12 lg:py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl lg:text-3xl font-bold text-gray-900 mb-8 text-center">{t(locale, 'training.whyChooseTitle')}</h2>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          <div class="bg-white rounded-xl p-6 text-center shadow-sm">
            <div class="w-14 h-14 bg-primary-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-7 h-7 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">{t(locale, 'training.benefit1Title')}</h3>
            <p class="text-gray-600 text-sm">{t(locale, 'training.benefit1Desc')}</p>
          </div>

          <div class="bg-white rounded-xl p-6 text-center shadow-sm">
            <div class="w-14 h-14 bg-success-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-7 h-7 text-success-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">{t(locale, 'training.benefit2Title')}</h3>
            <p class="text-gray-600 text-sm">{t(locale, 'training.benefit2Desc')}</p>
          </div>

          <div class="bg-white rounded-xl p-6 text-center shadow-sm">
            <div class="w-14 h-14 bg-warning-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-7 h-7 text-warning-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">{t(locale, 'training.benefit3Title')}</h3>
            <p class="text-gray-600 text-sm">{t(locale, 'training.benefit3Desc')}</p>
          </div>

          <div class="bg-white rounded-xl p-6 text-center shadow-sm">
            <div class="w-14 h-14 bg-primary-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-7 h-7 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">{t(locale, 'training.benefit4Title')}</h3>
            <p class="text-gray-600 text-sm">{t(locale, 'training.benefit4Desc')}</p>
          </div>
        </div>

        <!-- CTA after benefits -->
        <div class="mt-10 text-center">
          <a
            href="#jelentkezes"
            class="inline-flex items-center px-6 py-3 bg-primary-600 text-white font-semibold rounded-xl hover:bg-primary-700 transition-colors"
          >
            {t(locale, 'training.applyNow')}
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- Training List -->
    <section id="kepzesek" class="py-12 lg:py-16 bg-white scroll-mt-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-10">
          <h2 class="text-2xl lg:text-3xl font-bold text-gray-900 mb-3">{t(locale, 'training.availableTrainings')}</h2>
          <p class="text-gray-600">{t(locale, 'training.chooseTraining')}</p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {trainings.map((training) => (
            <a
              href={`${trainingUrlPrefix}/${training.slug}`}
              class="bg-white rounded-2xl shadow-sm border border-gray-200 overflow-hidden hover:shadow-lg hover:border-primary-300 transition-all group block"
            >
              <div class="p-6">
                <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center mb-4 group-hover:bg-primary-200 transition-colors">
                  <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                  </svg>
                </div>

                <h3 class="text-xl font-semibold text-gray-900 mb-2 group-hover:text-primary-600 transition-colors">
                  {training.data.name}
                </h3>
                <p class="text-gray-600 mb-4">{training.data.shortDescription}</p>

                <div class="space-y-2 mb-4">
                  <div class="flex items-center text-sm text-gray-600">
                    <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span>{t(locale, 'training.duration')}: {training.data.duration}</span>
                  </div>
                  <div class="flex items-center text-sm text-success-600 font-medium">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <span>{training.data.priceFormatted || `${training.data.price?.toLocaleString('hu-HU')} Ft`}</span>
                  </div>
                  {training.data.certificate && (
                    <div class="flex items-center text-sm text-primary-600">
                      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                      </svg>
                      <span>{training.data.certificate}</span>
                    </div>
                  )}
                </div>

                <div class="border-t border-gray-100 pt-4">
                  <span class="inline-flex items-center text-primary-600 font-medium group-hover:text-primary-700">
                    {t(locale, 'common.viewDetails')}
                    <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </span>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Signup Form Section -->
    <section id="jelentkezes" class="py-12 lg:py-16 bg-gray-50 scroll-mt-20">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-8">
          <h2 class="text-2xl lg:text-3xl font-bold text-gray-900 mb-3">{t(locale, 'training.signupTitle')}</h2>
          <p class="text-gray-600">{t(locale, 'training.signupSubtitle')}</p>
        </div>
        <TrainingSignupForm />
      </div>
    </section>

    <!-- CTA -->
    <section class="py-12 lg:py-16 bg-primary-600">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-2xl lg:text-3xl font-bold text-white mb-4">
          {t(locale, 'training.ctaTitle')}
        </h2>
        <p class="text-primary-100 mb-8 max-w-2xl mx-auto">
          {t(locale, 'training.ctaSubtitle')}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href={`tel:${CONTACT.phone}`}
            class="inline-flex items-center justify-center px-6 py-3 bg-white text-primary-600 font-semibold rounded-xl hover:bg-gray-100 transition-colors"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            {CONTACT.phoneDisplay}
          </a>
          <a
            href="#jelentkezes"
            class="inline-flex items-center justify-center px-6 py-3 bg-primary-700 text-white font-semibold rounded-xl hover:bg-primary-800 transition-colors"
          >
            {t(locale, 'training.signup')}
          </a>
        </div>
      </div>
    </section>

  </div>
</BaseLayout>

---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { CONTACT, COMPANY, LOCATIONS } from '../../lib/constants';
import { t, getLocaleFromUrl, type Locale } from '../../i18n/ui';

// Get locale from URL
const locale = getLocaleFromUrl(Astro.url) as Locale;

// Localized contact link
const contactLink = locale === 'hu' ? '/kapcsolat' : `/${locale}/kapcsolat`;
---

<BaseLayout
  title={t(locale, 'shipping.title')}
  description={t(locale, 'shipping.description')}
>
  <div id="main-content">

    <!-- Hero -->
    <section class="bg-gradient-to-b from-gray-50 to-white py-12 lg:py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto">
          <h1 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
            {t(locale, 'shipping.title')}
          </h1>
          <p class="text-lg text-gray-600">
            {t(locale, 'shipping.subtitle')}
          </p>
        </div>
      </div>
    </section>

    <!-- Professional Equipment Shipping -->
    <section class="py-12 lg:py-16 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">

        <div class="mb-12">
          <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center gap-3">
            <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path d="M9 17a2 2 0 11-4 0 2 2 0 014 0zM19 17a2 2 0 11-4 0 2 2 0 014 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0" />
              </svg>
            </div>
            {t(locale, 'shipping.professionalTitle')}
          </h2>

          <div class="bg-gray-50 rounded-xl p-6 mb-6">
            <p class="text-gray-600 mb-4">
              {t(locale, 'shipping.professionalDesc')}
            </p>
            <div class="space-y-3 text-gray-600">
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-primary-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span><strong>{t(locale, 'shipping.deliveryTime')}:</strong> {t(locale, 'shipping.deliveryTimeValue')}</span>
              </div>
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-warning-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
                <span><strong>{t(locale, 'shipping.customConfig')}:</strong> {t(locale, 'shipping.customConfigNote')}</span>
              </div>
            </div>
          </div>

          <!-- DHL Partner Info -->
          <div class="bg-primary-50 rounded-xl p-6 mb-6">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center shrink-0">
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-2">{t(locale, 'shipping.dhlPartnerTitle')}</h3>
                <p class="text-gray-600 mb-3">
                  {t(locale, 'shipping.dhlPartnerDesc')}
                </p>
                <ul class="space-y-2 text-gray-600">
                  <li class="flex items-center gap-2">
                    <svg class="w-5 h-5 text-success-500 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <span><strong>{t(locale, 'shipping.dhlPoint1')}</strong></span>
                  </li>
                  <li class="flex items-center gap-2">
                    <svg class="w-5 h-5 text-success-500 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <span><strong>{t(locale, 'shipping.dhlPoint2')}</strong></span>
                  </li>
                  <li class="flex items-center gap-2">
                    <svg class="w-5 h-5 text-success-500 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <span><strong>{t(locale, 'shipping.dhlPoint3')}</strong></span>
                  </li>
                </ul>
                <p class="text-gray-600 mt-3">
                  {t(locale, 'shipping.dhlConclusion')}
                </p>
              </div>
            </div>
          </div>

          <!-- Shipping Process -->
          <div class="bg-gray-50 rounded-xl p-6 mb-6">
            <h3 class="font-semibold text-gray-900 mb-4">{t(locale, 'shipping.processTitle')}</h3>
            <div class="space-y-4">
              <div class="flex gap-4">
                <div class="w-8 h-8 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold shrink-0 text-sm">1</div>
                <div class="pt-1">
                  <p class="text-gray-600">{t(locale, 'shipping.step1')}</p>
                </div>
              </div>
              <div class="flex gap-4">
                <div class="w-8 h-8 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold shrink-0 text-sm">2</div>
                <div class="pt-1">
                  <p class="text-gray-600">{t(locale, 'shipping.step2')}</p>
                </div>
              </div>
              <div class="flex gap-4">
                <div class="w-8 h-8 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold shrink-0 text-sm">3</div>
                <div class="pt-1">
                  <p class="text-gray-600">{t(locale, 'shipping.step3')}</p>
                </div>
              </div>
              <div class="flex gap-4">
                <div class="w-8 h-8 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold shrink-0 text-sm">4</div>
                <div class="pt-1">
                  <p class="text-gray-600">{t(locale, 'shipping.step4')}</p>
                </div>
              </div>
              <div class="flex gap-4">
                <div class="w-8 h-8 bg-success-600 text-white rounded-full flex items-center justify-center font-bold shrink-0 text-sm">5</div>
                <div class="pt-1">
                  <p class="text-gray-600">{t(locale, 'shipping.step5')}</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Pickup Options -->
        <div class="mb-12">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">{t(locale, 'shipping.pickupTitle')}</h2>

          <!-- Personal Pickup -->
          <div class="bg-success-50 border border-success-200 rounded-xl p-6 mb-6">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-success-100 rounded-xl flex items-center justify-center shrink-0">
                <svg class="w-6 h-6 text-success-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <div class="flex items-center gap-2 mb-2">
                  <h3 class="font-semibold text-gray-900">{t(locale, 'shipping.personalPickup')}</h3>
                  <span class="px-2 py-1 bg-success-100 text-success-700 text-xs font-medium rounded-full">{t(locale, 'common.recommended')}</span>
                </div>
                <p class="text-gray-600 mb-3">
                  {t(locale, 'shipping.personalPickupDesc')}
                </p>
                <ul class="space-y-2 text-gray-600 mb-4">
                  <li class="flex items-start gap-2">
                    <svg class="w-5 h-5 text-success-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <span>{t(locale, 'shipping.pickupBenefit1')}</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <svg class="w-5 h-5 text-success-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <span>{t(locale, 'shipping.pickupBenefit2')}</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <svg class="w-5 h-5 text-success-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <span>{t(locale, 'shipping.pickupBenefit3')}</span>
                  </li>
                </ul>
                <div class="bg-white rounded-lg p-4">
                  <p class="text-sm text-gray-600 mb-1"><strong>{t(locale, 'shipping.pickupLocation')}:</strong></p>
                  <p class="text-gray-900 font-medium">{LOCATIONS.showroom.fullAddress} - Skinlab SHOWROOM</p>
                  <p class="text-sm text-gray-500 mt-2">{t(locale, 'shipping.pickupNote')}</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Home Delivery -->
          <div class="bg-gray-50 rounded-xl p-6">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-gray-100 rounded-xl flex items-center justify-center shrink-0">
                <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path d="M9 17a2 2 0 11-4 0 2 2 0 014 0zM19 17a2 2 0 11-4 0 2 2 0 014 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-2">{t(locale, 'shipping.homeDelivery')}</h3>
                <p class="text-gray-600 mb-3">
                  {t(locale, 'shipping.homeDeliveryDesc')}
                </p>
                <ul class="space-y-2 text-gray-600">
                  <li class="flex items-start gap-2">
                    <svg class="w-5 h-5 text-gray-400 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span>{t(locale, 'shipping.homeDeliveryNote1')}</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <svg class="w-5 h-5 text-gray-400 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span>{t(locale, 'shipping.homeDeliveryNote2')}</span>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>

        <!-- Payment Section -->
        <div class="pt-12 border-t border-gray-200">
          <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center gap-3">
            <div class="w-12 h-12 bg-success-100 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-success-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
              </svg>
            </div>
            {t(locale, 'shipping.paymentTitle')}
          </h2>

          <!-- Online Payment -->
          <div class="mb-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">{t(locale, 'shipping.onlinePayment')}</h3>
            <div class="grid sm:grid-cols-2 gap-4">
              <div class="bg-gray-50 rounded-xl p-6">
                <div class="flex items-center gap-3 mb-3">
                  <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                  </svg>
                  <h4 class="font-semibold text-gray-900">{t(locale, 'shipping.cardPayment')}</h4>
                </div>
                <p class="text-gray-600 text-sm">
                  {t(locale, 'shipping.cardPaymentDesc')}
                </p>
              </div>

              <div class="bg-gray-50 rounded-xl p-6">
                <div class="flex items-center gap-3 mb-3">
                  <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4V10z" />
                  </svg>
                  <h4 class="font-semibold text-gray-900">{t(locale, 'shipping.bankTransfer')}</h4>
                </div>
                <p class="text-gray-600 text-sm">
                  {t(locale, 'shipping.bankTransferDesc')}
                </p>
              </div>
            </div>
          </div>

          <!-- Installment Payment -->
          <div class="mb-6" id="reszletfizetes">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">{t(locale, 'shipping.installmentPayment')}</h3>

            <div class="bg-gradient-to-br from-primary-50 to-indigo-50 rounded-xl p-6 border border-primary-100">
              <div class="flex items-start gap-4 mb-6">
                <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center shrink-0">
                  <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div>
                  <h4 class="font-bold text-gray-900 text-lg mb-2">{t(locale, 'shipping.interestFree')}</h4>
                  <p class="text-gray-600">
                    {t(locale, 'shipping.interestFreeDesc')}
                  </p>
                </div>
              </div>

              <!-- Payment Structure -->
              <div class="bg-white rounded-xl p-5 mb-5">
                <h5 class="font-semibold text-gray-900 mb-4">{t(locale, 'shipping.paymentStructure')}</h5>
                <div class="space-y-3">
                  <div class="flex items-center gap-3 p-3 bg-primary-50 rounded-lg">
                    <div class="w-10 h-10 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold">50%</div>
                    <div>
                      <p class="font-medium text-gray-900">{t(locale, 'shipping.deposit')}</p>
                      <p class="text-sm text-gray-500">{t(locale, 'shipping.depositNote')}</p>
                    </div>
                  </div>
                  <div class="flex items-center gap-3 p-3 bg-gray-50 rounded-lg">
                    <div class="w-10 h-10 bg-gray-600 text-white rounded-full flex items-center justify-center font-bold">50%</div>
                    <div>
                      <p class="font-medium text-gray-900">{t(locale, 'shipping.remaining')}</p>
                      <p class="text-sm text-gray-500">{t(locale, 'shipping.remainingNote')}</p>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Installment Options -->
              <div class="bg-white rounded-xl p-5 mb-5">
                <h5 class="font-semibold text-gray-900 mb-4">{t(locale, 'shipping.installmentOptions')}</h5>
                <div class="grid sm:grid-cols-2 gap-4">
                  <div class="border border-gray-200 rounded-lg p-4">
                    <div class="flex items-center gap-2 mb-2">
                      <span class="px-2 py-1 bg-success-100 text-success-700 text-xs font-bold rounded">{t(locale, 'shipping.3months')}</span>
                      <span class="text-success-600 text-sm font-medium">0% {t(locale, 'shipping.interest')}</span>
                    </div>
                    <p class="text-gray-600 text-sm">{t(locale, 'shipping.3monthsDesc')}</p>
                    <p class="text-xs text-gray-400 mt-1">{t(locale, 'shipping.minOrder1M')}</p>
                  </div>
                  <div class="border border-gray-200 rounded-lg p-4">
                    <div class="flex items-center gap-2 mb-2">
                      <span class="px-2 py-1 bg-success-100 text-success-700 text-xs font-bold rounded">{t(locale, 'shipping.6months')}</span>
                      <span class="text-success-600 text-sm font-medium">0% {t(locale, 'shipping.interest')}</span>
                    </div>
                    <p class="text-gray-600 text-sm">{t(locale, 'shipping.6monthsDesc')}</p>
                    <p class="text-xs text-gray-400 mt-1">{t(locale, 'shipping.minOrder1M')}</p>
                  </div>
                  <div class="border border-primary-200 rounded-lg p-4 bg-primary-50 sm:col-span-2">
                    <div class="flex items-center gap-2 mb-2">
                      <span class="px-2 py-1 bg-primary-600 text-white text-xs font-bold rounded">{t(locale, 'shipping.12months')}</span>
                      <span class="text-primary-600 text-sm font-medium">{t(locale, 'shipping.specialOffer')}</span>
                    </div>
                    <p class="text-gray-600 text-sm">{t(locale, 'shipping.12monthsDesc')}</p>
                    <p class="text-xs text-gray-500 mt-1"><strong>{t(locale, 'shipping.minOrder5M')}</strong></p>
                  </div>
                </div>
              </div>

              <!-- One-time Payment Bonus -->
              <div class="bg-success-50 border border-success-200 rounded-xl p-5">
                <div class="flex items-start gap-3">
                  <div class="w-10 h-10 bg-success-100 rounded-xl flex items-center justify-center shrink-0">
                    <svg class="w-5 h-5 text-success-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7" />
                    </svg>
                  </div>
                  <div>
                    <h5 class="font-semibold text-gray-900 mb-1">{t(locale, 'shipping.oneTimePaymentTitle')}</h5>
                    <p class="text-gray-600 text-sm mb-2">
                      {t(locale, 'shipping.oneTimePaymentDesc')}
                    </p>
                    <p class="text-xs text-gray-500">
                      {t(locale, 'shipping.oneTimePaymentNote')}
                    </p>
                  </div>
                </div>
              </div>

              <!-- Minimum Order Note -->
              <div class="mt-4 flex items-center gap-2 text-sm text-gray-500">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span>{t(locale, 'shipping.installmentMinNote')}</span>
              </div>
            </div>
          </div>

        </div>

        <!-- Customer Support -->
        <div class="mt-12 bg-primary-50 rounded-xl p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">{t(locale, 'shipping.supportTitle')}</h3>
          <p class="text-gray-600 mb-4">
            {t(locale, 'shipping.supportDesc')}
          </p>
          <ul class="space-y-2 text-gray-600 mb-4">
            <li class="flex items-start gap-2">
              <svg class="w-5 h-5 text-primary-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>{t(locale, 'shipping.supportPoint1')}</span>
            </li>
            <li class="flex items-start gap-2">
              <svg class="w-5 h-5 text-primary-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>{t(locale, 'shipping.supportPoint2')}</span>
            </li>
            <li class="flex items-start gap-2">
              <svg class="w-5 h-5 text-primary-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>{t(locale, 'shipping.supportPoint3')}</span>
            </li>
          </ul>
          <p class="text-gray-700 font-medium">
            {t(locale, 'shipping.supportGoal')}
          </p>
        </div>

      </div>
    </section>

    <!-- CTA -->

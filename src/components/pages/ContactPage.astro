---
import BaseLayout from '../../layouts/BaseLayout.astro';
import GoogleMap from '../../components/ui/GoogleMap.astro';
import { CONTACT, LOCATIONS, CATEGORIES } from '../../lib/constants';
import { t, getLocaleFromUrl, type Locale } from '../../i18n/ui';

// Get locale from URL
const locale = getLocaleFromUrl(Astro.url) as Locale;

// Localized privacy link
const privacyLink = locale === 'hu' ? '/adatvedelem' : `/${locale}/adatvedelem`;
---

<BaseLayout
  title={t(locale, 'contact.title')}
  description={t(locale, 'contact.subtitle')}
>
  <div id="main-content">

    <!-- Hero -->
    <section class="bg-gradient-to-b from-gray-50 to-white py-12 lg:py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto">
          <h1 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
            {t(locale, 'contact.title')}
          </h1>
          <p class="text-lg text-gray-600">
            {t(locale, 'contact.subtitle')}
          </p>
        </div>
      </div>
    </section>

    <!-- Contact Grid -->
    <section class="py-12 lg:py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-16">

          <!-- Contact Form -->
          <div>
            <h2 class="text-2xl font-bold text-gray-900 mb-6">
              {t(locale, 'cta.button')}
            </h2>

            <form class="space-y-6" id="contact-form">
              <!-- Name -->
              <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                  {t(locale, 'form.name')} *
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                  placeholder={t(locale, 'form.namePlaceholder')}
                />
              </div>

              <!-- Email -->
              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                  {t(locale, 'form.email')} *
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                  placeholder={t(locale, 'form.emailPlaceholder')}
                />
              </div>

              <!-- Phone -->
              <div>
                <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                  {t(locale, 'form.phone')} *
                </label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                  placeholder={t(locale, 'form.phonePlaceholder')}
                />
              </div>

              <!-- Product interest -->
              <div>
                <label for="product" class="block text-sm font-medium text-gray-700 mb-2">
                  {t(locale, 'form.product')} *
                </label>
                <select
                  id="product"
                  name="product"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                >
                  <option value="">{t(locale, 'form.productPlaceholder')}</option>
                  {CATEGORIES.map((cat) => (
                    <option value={cat.id}>{t(locale, `categories.${cat.slug}`) || cat.name}</option>
                  ))}
                  <option value="other">{t(locale, 'common.all')}</option>
                </select>
              </div>

              <!-- Message -->
              <div>
                <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
                  {t(locale, 'form.message')}
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="4"
                  class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors resize-none"
                  placeholder={t(locale, 'form.messagePlaceholder')}
                ></textarea>
              </div>

              <!-- Honeypot -->
              <div class="hidden" aria-hidden="true">
                <input type="text" name="company" tabindex="-1" autocomplete="off" />
              </div>

              <!-- GDPR -->
              <div class="flex items-start gap-3">
                <input
                  type="checkbox"
                  id="gdpr"
                  name="gdpr"
                  required
                  class="mt-1 w-5 h-5 text-primary-600 border-gray-300 rounded focus:ring-primary-500"
                />
                <label for="gdpr" class="text-sm text-gray-600">
                  {t(locale, 'form.gdprConsent')} *
                </label>
              </div>

              <!-- Submit -->
              <button
                type="submit"
                class="w-full px-6 py-4 bg-primary-600 text-white font-semibold rounded-xl hover:bg-primary-700 transition-colors shadow-lg"
              >
                {t(locale, 'form.submit')}
              </button>
            </form>
          </div>

          <!-- Contact Info -->
          <div class="space-y-8">

            <!-- Direct contact -->
            <div>
              <h2 class="text-2xl font-bold text-gray-900 mb-6">
                {t(locale, 'contact.phone')} & {t(locale, 'contact.email')}
              </h2>

              <div class="space-y-4">
                <a
                  href={CONTACT.phoneTel}
                  class="flex items-center gap-4 p-4 bg-success-50 rounded-xl hover:bg-success-100 transition-colors group"
                >
                  <div class="w-12 h-12 bg-success-100 rounded-xl flex items-center justify-center group-hover:bg-success-200 transition-colors">
                    <svg class="w-6 h-6 text-success-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                  </div>
                  <div>
                    <div class="font-semibold text-gray-900">{CONTACT.phoneDisplay}</div>
                    <div class="text-sm text-gray-600">{t(locale, 'ctaSection.callAnytime')}</div>
                  </div>
                </a>

                <a
                  href={`mailto:${CONTACT.email}`}
                  class="flex items-center gap-4 p-4 bg-gray-50 rounded-xl hover:bg-gray-100 transition-colors group"
                >
                  <div class="w-12 h-12 bg-gray-100 rounded-xl flex items-center justify-center group-hover:bg-gray-200 transition-colors">
                    <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                  </div>
                  <div>
                    <div class="font-semibold text-gray-900">{CONTACT.email}</div>
                    <div class="text-sm text-gray-600">{t(locale, 'ctaSection.emailUs')}</div>
                  </div>
                </a>
              </div>
            </div>

            <!-- Showroom -->
            <div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">
                {t(locale, 'contact.showroom')}
              </h3>

              <div class="bg-gray-50 rounded-2xl p-6">
                <div class="flex items-start gap-4 mb-4">
                  <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center shrink-0">
                    <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                  </div>
                  <div>
                    <div class="font-semibold text-gray-900">{LOCATIONS.showroom.name}</div>
                    <div class="text-gray-600">{LOCATIONS.showroom.fullAddress}</div>
                    <div class="text-sm text-gray-500 mt-1">{t(locale, 'contact.showroomNote')}</div>
                  </div>
                </div>

                <a
                  href={LOCATIONS.showroom.googleMapsUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center text-primary-600 font-medium hover:text-primary-700"
                >
                  {t(locale, 'contact.getDirections')}
                  <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                </a>
              </div>

              <!-- Google Map - Lazy loaded -->
              <div class="mt-4">
                <GoogleMap
                  lat={LOCATIONS.showroom.geo.latitude}
                  lng={LOCATIONS.showroom.geo.longitude}
                  aspectRatio="16/9"
                  placeholderText={t(locale, 'common.loading')}
                  class="rounded-2xl"
                />
              </div>
            </div>

          </div>
        </div>
      </div>
    </section>

  </div>
</BaseLayout>

<script>
  // Basic form validation feedback
  const form = document.getElementById('contact-form');

  form?.addEventListener('submit', (e) => {
    e.preventDefault();

    // TODO: Implement actual form submission
    // For now, show a placeholder message
    alert('Thank you! Form backend is not yet connected. Please call us at +36 70 413 6819.');
  });
</script>

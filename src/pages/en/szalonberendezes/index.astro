---
import CategoryLayout from '../../../layouts/CategoryLayout.astro';
import { getCollection } from 'astro:content';

const category = {
  name: 'Salon Furniture',
  nameShort: 'Salon Furniture',
  slug: 'szalonberendezes',
  description: 'Professional salon furniture, trolleys and accessories.',
  heroDescription: 'Quality salon furniture, cosmetic beds, trolleys and accessories. Design your dream salon with us!',
  badge: 'Complete furnishing',
  color: 'amber',
};

const products = await getCollection('products', ({ data }) => {
  return data.categorySlug === 'szalonberendezes';
});
---

<CategoryLayout category={category} products={products} />

---
import CategoryLayout from '../../../layouts/CategoryLayout.astro';
import { getCollection } from 'astro:content';

const category = {
  name: 'Accessories & Supplies',
  nameShort: 'Accessories',
  slug: 'kellekek',
  description: 'Treatment materials, needle modules and other accessories.',
  heroDescription: 'Professional consumables and treatment materials for daily work. Needle modules, hydrafacial solutions, OxyGenX pods and carbon gel - everything for successful treatments.',
  badge: 'Consumables',
  color: 'gray',
};

const products = await getCollection('products', ({ data }) => {
  return data.categorySlug === 'kellekek';
});
---

<CategoryLayout category={category} products={products} />

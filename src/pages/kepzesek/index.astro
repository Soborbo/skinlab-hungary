---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { COMPANY, CONTACT, LOCATIONS } from '../../lib/constants';
import { ContentImage, ThirdImage } from '../../components/images';
import TrainingSignupForm from '../../components/forms/TrainingSignupForm.astro';
import CourseSchema from '../../components/schema/CourseSchema.astro';

// Import training images
import trainingHero from '../../assets/training-hero.jpg';
import trainingImg1 from '../../assets/training-1.jpg';
import trainingImg2 from '../../assets/training-2.jpg';
import trainingImg3 from '../../assets/training-3.jpg';
import trainingImg4 from '../../assets/training-4.jpg';
import trainingImg5 from '../../assets/training-5.jpg';
import trainingImg6 from '../../assets/training-6.jpg';

// Gallery images (hero alatti forgató)
import galleryImg1 from '../../assets/training-gallery-1.jpg';
import galleryImg2 from '../../assets/training-gallery-2.jpg';
import galleryImg3 from '../../assets/training-gallery-3.jpg';
import galleryImg4 from '../../assets/training-gallery-4.jpg';
import galleryImg5 from '../../assets/training-gallery-5.jpg';
import galleryImg6 from '../../assets/training-gallery-6.jpg';

const trainings = await getCollection('trainings');

const galleryImages = [
  { src: galleryImg1, alt: 'Kozmetikus képzés gyakorlati oktatás' },
  { src: galleryImg2, alt: 'Professzionális gépkezelői tanfolyam' },
  { src: galleryImg3, alt: 'Hands-on gyakorlat a képzésen' },
  { src: galleryImg4, alt: 'Szőrtelenítő lézer oktatás' },
  { src: galleryImg5, alt: 'Szakmai képzés a showroomban' },
  { src: galleryImg6, alt: 'Tanúsítványt adó képzés' },
];
---

<BaseLayout
  title="Oktatások – Professzionális kozmetikai és esztétikai gépkezelő képzések"
  description="FAR jegyzett, B-számos tanúsítvánnyal záruló professzionális gépkezelői képzések. Egészségügyi háttérrel, jogi és marketing modullal. Gépvásárlás nélkül is elérhető."
>
  <CourseSchema
    name="SkinLab Professzionális Gépkezelői Képzések"
    description="FAR jegyzett, B-számos tanúsítvánnyal záruló professzionális kozmetikai és esztétikai gépkezelői képzések. Egészségügyi háttérrel, jogi és marketing modullal. Gépvásárlás nélkül is elérhető."
    category="Kozmetikai gépkezelői képzés"
    certificate="B-számos tanúsítvány"
    isOverviewPage={true}
  />
  <div id="main-content">

    <!-- Hero with Main Image -->
    <section class="bg-gradient-to-b from-gray-50 to-white py-12 lg:py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-center">
          <!-- Content -->
          <div>
            <div class="inline-flex items-center gap-2 bg-primary-100 text-primary-700 px-3 py-1 rounded-full text-sm font-medium mb-4">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
              </svg>
              FAR jegyzett képzések
            </div>
            <h1 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
              Professzionális kozmetikai gépkezelői képzések
            </h1>
            <p class="text-lg text-gray-600 leading-relaxed mb-6">
              Oktatásainkat azok számára hoztuk létre, akik a kozmetikai és esztétikai gépek használatát <strong>valódi, szakmailag megalapozott tudással</strong> szeretnék elsajátítani.
            </p>
            <div class="flex flex-wrap gap-4">
              <a
                href="#kepzesek"
                class="inline-flex items-center px-5 py-3 bg-primary-600 text-white font-semibold rounded-xl hover:bg-primary-700 transition-colors"
              >
                Képzések megtekintése
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </a>
              <a
                href={`tel:${CONTACT.phone}`}
                class="inline-flex items-center px-5 py-3 bg-white text-gray-700 font-semibold rounded-xl border-2 border-gray-200 hover:border-primary-300 transition-colors"
              >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                {CONTACT.phoneDisplay}
              </a>
            </div>
          </div>

          <!-- Hero Image -->
          <div class="relative">
            <div class="rounded-2xl overflow-hidden shadow-2xl">
              <ContentImage
                src={trainingHero}
                alt="Kozmetikus képzés"
                class="w-full h-full object-cover aspect-[4/3]"
              />
            </div>
            <!-- Floating badge -->
            <div class="absolute -bottom-4 -left-4 bg-white rounded-xl shadow-xl p-4 hidden sm:block">
              <div class="flex items-center gap-3">
                <div class="w-12 h-12 bg-success-100 rounded-xl flex items-center justify-center">
                  <svg class="w-6 h-6 text-success-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                  </svg>
                </div>
                <div>
                  <div class="font-bold text-gray-900">B-számos tanúsítvány</div>
                  <div class="text-sm text-gray-500">Hivatalos képzés</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Image Gallery Strip -->
    <section class="py-8 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-3 md:grid-cols-6 gap-2 lg:gap-4">
          {galleryImages.map((img, index) => (
            <div class={`rounded-xl overflow-hidden ${index === 0 ? 'ring-2 ring-primary-500 ring-offset-2' : ''}`}>
              <ThirdImage
                src={img.src}
                alt={img.alt}
                class="w-full aspect-square object-cover hover:scale-105 transition-transform duration-300"
              />
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Main Intro with Image -->
    <section class="py-12 lg:py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-center">
          <!-- Image -->
          <div class="order-2 lg:order-1">
            <div class="rounded-2xl overflow-hidden shadow-lg">
              <ContentImage
                src={trainingImg2}
                alt="Professzionális gépkezelői tanfolyam"
                class="w-full h-full object-cover aspect-[4/3]"
              />
            </div>
          </div>

          <!-- Content -->
          <div class="order-1 lg:order-2">
            <h2 class="text-2xl lg:text-3xl font-bold text-gray-900 mb-4">
              Mély, átfogó és gyakorlatorientált tudás
            </h2>
            <p class="text-gray-600 leading-relaxed mb-6">
              Képzéseink <strong>egészségügyi háttérre épülnek</strong>, klinikailag igazolt eredményekkel dolgozunk, és nagy hangsúlyt fektetünk a kezelések <strong>biztonságos, felelős és szakszerű kivitelezésére</strong>.
            </p>
            <p class="text-gray-600 leading-relaxed mb-6">
              Nálunk nem egy gyors, kapkodó, egyórás „összeszerelős" oktatást kapsz. Ahelyett, hogy csak megmutatnánk, hogyan kell elindítani a géped, <strong>valódi szakértelmet</strong> adunk át.
            </p>

            <div class="grid sm:grid-cols-2 gap-4">
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-success-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-gray-700">Helyesen kezelni a gépet</span>
              </div>
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-success-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-gray-700">Magabiztosan beállítani a paramétereket</span>
              </div>
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-success-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-gray-700">Felismerni a hibafaktorokat</span>
              </div>
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-success-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-gray-700">Felkészülni minden eshetőségre</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- No Purchase Required with Image -->
    <section class="py-12 lg:py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-center">
          <!-- Content -->
          <div>
            <div class="inline-flex items-center gap-2 bg-success-100 text-success-700 px-3 py-1 rounded-full text-sm font-medium mb-4">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              Nincs gépvásárlási kötelezettség
            </div>
            <h2 class="text-2xl lg:text-3xl font-bold text-gray-900 mb-4">
              Oktatásaink gépvásárlás nélkül is elérhetők
            </h2>
            <p class="text-gray-600 leading-relaxed mb-4">
              Nem helyezünk rád semmilyen nyomást a későbbi eszközbeszerzést illetően. A célunk nem az, hogy eladjunk neked egy gépet, hanem az, hogy <strong>valódi, gyakorlatban használható tudást</strong> adjunk át.
            </p>
            <p class="text-gray-600 leading-relaxed">
              Támogatjuk szakmai fejlődésed – függetlenül attól, hogy nálunk vagy más forgalmazónál vásárolsz eszközöket.
            </p>
          </div>

          <!-- Image -->
          <div>
            <div class="rounded-2xl overflow-hidden shadow-lg">
              <ContentImage
                src={trainingImg3}
                alt="Hands-on gyakorlat a képzésen"
                class="w-full h-full object-cover aspect-[4/3]"
              />
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Official Certification with Image -->
    <section class="py-12 lg:py-16 bg-primary-600">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-center">
          <!-- Image -->
          <div class="order-2 lg:order-1">
            <div class="rounded-2xl overflow-hidden shadow-2xl">
              <ContentImage
                src={trainingImg6}
                alt="Hivatalos tanúsítvány"
                class="w-full h-full object-cover aspect-[4/3]"
              />
            </div>
          </div>

          <!-- Content -->
          <div class="order-1 lg:order-2 text-white">
            <div class="inline-flex items-center gap-2 bg-white/20 px-3 py-1 rounded-full text-sm font-medium mb-4">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
              </svg>
              FAR jegyzett
            </div>
            <h2 class="text-2xl lg:text-3xl font-bold mb-4">
              Hivatalos, tanúsítványt adó képzések
            </h2>
            <p class="text-primary-100 leading-relaxed mb-4">
              Minden oktatásunk hivatalos keretek között zajlik, és a <strong class="text-white">Felnőttképzési Adatrögzítési Rendszerben (FAR) jegyzett</strong>.
            </p>
            <p class="text-primary-100 leading-relaxed mb-6">
              A képzések sikeres elvégzése után <strong class="text-white">B-számos tanúsítványt</strong> állítunk ki, amely igazolja szakmai kompetenciáidat.
            </p>

            <div class="grid sm:grid-cols-2 gap-4">
              <div class="bg-white/10 rounded-xl p-4">
                <div class="text-2xl font-bold mb-1">B-számos</div>
                <div class="text-primary-200 text-sm">Hivatalos tanúsítvány</div>
              </div>
              <div class="bg-white/10 rounded-xl p-4">
                <div class="text-2xl font-bold mb-1">FAR</div>
                <div class="text-primary-200 text-sm">Jegyzett képzés</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Key Benefits -->
    <section class="py-12 lg:py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl lg:text-3xl font-bold text-gray-900 mb-8 text-center">Miért válaszd a SkinLab képzéseit?</h2>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          <div class="bg-white rounded-xl p-6 text-center shadow-sm">
            <div class="w-14 h-14 bg-primary-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-7 h-7 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">FAR jegyzett</h3>
            <p class="text-gray-600 text-sm">B-számos tanúsítvány a képzés végén</p>
          </div>

          <div class="bg-white rounded-xl p-6 text-center shadow-sm">
            <div class="w-14 h-14 bg-success-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-7 h-7 text-success-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Egészségügyi háttér</h3>
            <p class="text-gray-600 text-sm">Klinikailag igazolt eredmények</p>
          </div>

          <div class="bg-white rounded-xl p-6 text-center shadow-sm">
            <div class="w-14 h-14 bg-warning-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-7 h-7 text-warning-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Jogi szemlélet</h3>
            <p class="text-gray-600 text-sm">Jogszabályhoz igazodó tananyag</p>
          </div>

          <div class="bg-white rounded-xl p-6 text-center shadow-sm">
            <div class="w-14 h-14 bg-primary-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-7 h-7 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Üzleti modul</h3>
            <p class="text-gray-600 text-sm">Marketing és vállalkozásfejlesztés</p>
          </div>
        </div>

        <!-- CTA after benefits -->
        <div class="mt-10 text-center">
          <a
            href="#jelentkezes"
            class="inline-flex items-center px-6 py-3 bg-primary-600 text-white font-semibold rounded-xl hover:bg-primary-700 transition-colors"
          >
            Jelentkezem képzésre
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- Training List -->
    <section id="kepzesek" class="py-12 lg:py-16 bg-white scroll-mt-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-10">
          <h2 class="text-2xl lg:text-3xl font-bold text-gray-900 mb-3">Elérhető képzések</h2>
          <p class="text-gray-600">Válaszd ki a számodra megfelelő képzést</p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {trainings.map((training) => (
            <a
              href={`/kepzesek/${training.slug}`}
              class="bg-white rounded-2xl shadow-sm border border-gray-200 overflow-hidden hover:shadow-lg hover:border-primary-300 transition-all group block"
            >
              <div class="p-6">
                <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center mb-4 group-hover:bg-primary-200 transition-colors">
                  <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                  </svg>
                </div>

                <h3 class="text-xl font-semibold text-gray-900 mb-2 group-hover:text-primary-600 transition-colors">
                  {training.data.name}
                </h3>
                <p class="text-gray-600 mb-4">{training.data.shortDescription}</p>

                <div class="space-y-2 mb-4">
                  <div class="flex items-center text-sm text-gray-600">

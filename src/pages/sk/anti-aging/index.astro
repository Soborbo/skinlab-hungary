---
import CategoryLayout from '../../../layouts/CategoryLayout.astro';
import { getCollection } from 'astro:content';

const category = {
  name: 'Anti-aging zariadenia',
  nameShort: 'Anti-aging',
  slug: 'anti-aging',
  description: 'RF, HIFU a dalsie technologie na omladenie pokozky.',
  heroDescription: 'Spevnenie pokozky, liecba vrasok, konturovanie tvare bez operacie. Radiofrekvencne, HIFU a kombinovane technologie.',
  badge: 'Mladsia pokozka',
  color: 'rose',
};

const products = await getCollection('products', ({ data }) => {
  return data.categorySlug === 'anti-aging';
});
---

<CategoryLayout category={category} products={products} />

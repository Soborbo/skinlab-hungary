---
import CategoryLayout from '../../../layouts/CategoryLayout.astro';
import { getCollection } from 'astro:content';

const category = {
  name: 'Salonovy nabytok',
  nameShort: 'Salonovy nabytok',
  slug: 'szalonberendezes',
  description: 'Profesionalny salonovy nabytok, voziky a prislusenstvo.',
  heroDescription: 'Kvalitny salonovy nabytok, kozmeticke lehatka, voziky a prislusenstvo. Navrhnite si vas vysnivany salon s nami!',
  badge: 'Kompletne vybavenie',
  color: 'amber',
};

const products = await getCollection('products', ({ data }) => {
  return data.categorySlug === 'szalonberendezes';
});
---

<CategoryLayout category={category} products={products} />

---
import CategoryLayout from '../../../layouts/CategoryLayout.astro';
import { getCollection } from 'astro:content';

const category = {
  name: 'Pikosekundove laserove pristroje',
  nameShort: 'Pico lasery',
  slug: 'pico-lezerek',
  description: 'Pikosekundove lasery pro pigmentaci a omladeni pokozky.',
  heroDescription: 'Ultrarychla pico technologie: pikosekundove impulzy pro dokonalou pokozku. Efektivni odstraneni pigmentace, omladeni pokozky a vybleduti tetovani s minimalnimi vedlejsimi ucinky.',
  badge: 'Top technologie',
  color: 'violet',
};

const products = await getCollection('products', ({ data }) => {
  return data.categorySlug === 'pico-lezerek';
});
---

<CategoryLayout category={category} products={products} />

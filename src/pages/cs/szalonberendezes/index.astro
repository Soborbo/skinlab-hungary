---
import CategoryLayout from '../../../layouts/CategoryLayout.astro';
import { getCollection } from 'astro:content';

const category = {
  name: 'Salonovy nabytek',
  nameShort: 'Salonovy nabytek',
  slug: 'szalonberendezes',
  description: 'Profesionalni salonovy nabytek, voziky a prislusenstvi.',
  heroDescription: 'Kvalitni salonovy nabytek, kosmeticka lehatka, voziky a prislusenstvi. Navrhnete si vas vysneny salon s nami!',
  badge: 'Kompletni vybaveni',
  color: 'amber',
};

const products = await getCollection('products', ({ data }) => {
  return data.categorySlug === 'szalonberendezes';
});
---

<CategoryLayout category={category} products={products} />

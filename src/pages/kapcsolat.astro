---
import BaseLayout from '../layouts/BaseLayout.astro';
import { CONTACT, LOCATIONS, CATEGORIES } from '../lib/constants';
---

<BaseLayout
  title="Kapcsolat"
  description="Lépj kapcsolatba a SkinLab csapatával! Ingyenes konzultáció, személyes bemutatás a showroomban."
>
  <div id="main-content">
    
    <!-- Hero -->
    <section class="bg-gradient-to-b from-gray-50 to-white py-12 lg:py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto">
          <h1 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
            Lépj kapcsolatba velünk
          </h1>
          <p class="text-lg text-gray-600">
            Kérj ingyenes konzultációt, vagy látogass el showroomunkba személyes bemutatóra
          </p>
        </div>
      </div>
    </section>
    
    <!-- Contact Grid -->
    <section class="py-12 lg:py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-16">
          
          <!-- Contact Form -->
          <div>
            <h2 class="text-2xl font-bold text-gray-900 mb-6">
              Konzultáció kérése
            </h2>
            
            <form class="space-y-6" id="contact-form">
              <!-- Name -->
              <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                  Név *
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                  placeholder="Teljes neved"
                />
              </div>
              
              <!-- Email -->
              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                  Email cím *
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                  placeholder="email@example.com"
                />
              </div>
              
              <!-- Phone -->
              <div>
                <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                  Telefonszám *
                </label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                  placeholder="+36 30 123 4567"
                />
              </div>
              
              <!-- Product interest -->
              <div>
                <label for="product" class="block text-sm font-medium text-gray-700 mb-2">
                  Melyik termék érdekel? *
                </label>
                <select
                  id="product"
                  name="product"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                >
                  <option value="">Válassz kategóriát...</option>
                  {CATEGORIES.map((cat) => (
                    <option value={cat.id}>{cat.name}</option>
                  ))}
                  <option value="other">Egyéb / Nem tudom még</option>
                </select>
              </div>
              
              <!-- Message -->
              <div>
                <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
                  Üzenet (opcionális)
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="4"
                  class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors resize-none"
                  placeholder="Írd le, miben segíthetünk..."
                ></textarea>
              </div>
              
              <!-- Honeypot -->
              <div class="hidden" aria-hidden="true">
                <input type="text" name="company" tabindex="-1" autocomplete="off" />
              </div>
              
              <!-- GDPR -->
              <div class="flex items-start gap-3">
                <input
                  type="checkbox"
                  id="gdpr"
                  name="gdpr"
                  required
                  class="mt-1 w-5 h-5 text-primary-600 border-gray-300 rounded focus:ring-primary-500"
                />
                <label for="gdpr" class="text-sm text-gray-600">
                  Elfogadom az <a href="/adatvedelem" class="text-primary-600 hover:underline">adatvédelmi nyilatkozatot</a> és hozzájárulok, hogy a SkinLab kapcsolatba lépjen velem. *
                </label>
              </div>
              
              <!-- Submit -->
              <button
                type="submit"
                class="w-full px-6 py-4 bg-primary-600 text-white font-semibold rounded-xl hover:bg-primary-700 transition-colors shadow-lg"
              >
                Konzultáció kérése
              </button>
            </form>
          </div>
          
          <!-- Contact Info -->
          <div class="space-y-8">
            
            <!-- Direct contact -->
            <div>
              <h2 class="text-2xl font-bold text-gray-900 mb-6">
                Közvetlen elérhetőségek
              </h2>
              
              <div class="space-y-4">
                <a
                  href={CONTACT.phoneTel}
                  class="flex items-center gap-4 p-4 bg-success-50 rounded-xl hover:bg-success-100 transition-colors group"
                >
                  <div class="w-12 h-12 bg-success-100 rounded-xl flex items-center justify-center group-hover:bg-success-200 transition-colors">
                    <svg class="w-6 h-6 text-success-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                  </div>
                  <div>
                    <div class="font-semibold text-gray-900">{CONTACT.phoneDisplay}</div>
                    <div class="text-sm text-gray-600">Hívj bármikor</div>
                  </div>
                </a>
                
                <a
                  href={`mailto:${CONTACT.email}`}
                  class="flex items-center gap-4 p-4 bg-gray-50 rounded-xl hover:bg-gray-100 transition-colors group"
                >
                  <div class="w-12 h-12 bg-gray-100 rounded-xl flex items-center justify-center group-hover:bg-gray-200 transition-colors">
                    <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                  </div>
                  <div>
                    <div class="font-semibold text-gray-900">{CONTACT.email}</div>
                    <div class="text-sm text-gray-600">Írj emailt</div>
                  </div>
                </a>
              </div>
            </div>
            
            <!-- Showroom -->
            <div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">
                Showroom
              </h3>
              
              <div class="bg-gray-50 rounded-2xl p-6">
                <div class="flex items-start gap-4 mb-4">
                  <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center shrink-0">
                    <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                  </div>
                  <div>
                    <div class="font-semibold text-gray-900">{LOCATIONS.showroom.name}</div>
                    <div class="text-gray-600">{LOCATIONS.showroom.fullAddress}</div>
                    <div class="text-sm text-gray-500 mt-1">{LOCATIONS.showroom.openingHoursNote}</div>
                  </div>
                </div>
                
                <a
                  href={LOCATIONS.showroom.googleMapsUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center text-primary-600 font-medium hover:text-primary-700"
                >
                  Megnyitás Google Maps-ben
                  <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                </a>
              </div>
              
              <!-- Map placeholder -->
              <div class="mt-4 aspect-video bg-gray-200 rounded-2xl overflow-hidden">
                <div class="w-full h-full flex items-center justify-center">
                  <div class="text-center p-8">
                    <div class="w-16 h-16 mx-auto mb-4 rounded-xl bg-white shadow flex items-center justify-center">
                      <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
                      </svg>
                    </div>
                    <p class="text-gray-500 font-medium">Google Maps beágyazás</p>
                    <p class="text-sm text-gray-400">Vagy statikus térkép kép</p>
                  </div>
                </div>
              </div>
            </div>
            
          </div>
        </div>
      </div>
    </section>
    
  </div>
</BaseLayout>

<script>
  // Basic form validation feedback
  const form = document.getElementById('contact-form');
  
  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    
    // TODO: Implement actual form submission
    // For now, show a placeholder message
    alert('Köszönjük! A form backend még nincs bekötve. Kérjük, hívj minket a +36 70 413 6819 számon.');
  });
</script>

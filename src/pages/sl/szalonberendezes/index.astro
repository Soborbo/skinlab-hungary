---
import CategoryLayout from '../../../layouts/CategoryLayout.astro';
import { getCollection } from 'astro:content';

const category = {
  name: 'Salonsko pohistvo',
  nameShort: 'Salonsko pohistvo',
  slug: 'szalonberendezes',
  description: 'Profesionalno salonsko pohistvo, vozicki in dodatki.',
  heroDescription: 'Kakovostno salonsko pohistvo, kozmeticne postelje, vozicki in dodatki. Oblikujte svoj sanjski salon z nami!',
  badge: 'Kompletna oprema',
  color: 'amber',
};

const products = await getCollection('products', ({ data }) => {
  return data.categorySlug === 'szalonberendezes';
});
---

<CategoryLayout category={category} products={products} />

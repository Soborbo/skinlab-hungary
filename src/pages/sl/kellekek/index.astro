---
import CategoryLayout from '../../../layouts/CategoryLayout.astro';
import { getCollection } from 'astro:content';

const category = {
  name: 'Dodatki in potrosni material',
  nameShort: 'Dodatki',
  slug: 'kellekek',
  description: 'Materiali za tretmaje, moduli igel in drugi dodatki.',
  heroDescription: 'Profesionalni potrosni material in materiali za tretmaje za vsakodnevno delo. Moduli igel, hydrafacial raztopine, OxyGenX podi in carbon gel - vse za uspesne tretmaje.',
  badge: 'Potrosni material',
  color: 'gray',
};

const products = await getCollection('products', ({ data }) => {
  return data.categorySlug === 'kellekek';
});
---

<CategoryLayout category={category} products={products} />

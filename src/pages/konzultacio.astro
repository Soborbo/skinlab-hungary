---
/**
 * Consultation Request Page
 * /konzultacio
 *
 * Multi-step consultation wizard for lead generation
 * Feminine, clean, conversion-optimized design
 */
import BaseLayout from '@/layouts/BaseLayout.astro';
import ConsultationWizard from '@/components/forms/ConsultationWizard.astro';
import { CONTACT } from '@/lib/constants';

// Get pre-selected product from URL
const product = Astro.url.searchParams.get('product') || '';
---

<BaseLayout
  title="Ingyenes konzultáció kérése"
  description="Kérjen ingyenes, személyre szabott konzultációt professzionális kozmetikai berendezésekről. Szakértő tanácsadás, 2 év garancia, betanítás."
>
  <section class="min-h-screen bg-gradient-to-b from-pink-50/50 to-white py-8 md:py-12">
    <div class="container mx-auto px-4">
      <!-- Header -->
      <div class="text-center mb-8 max-w-2xl mx-auto">
        <div class="inline-flex items-center gap-2 bg-pink-100 text-pink-700 rounded-full px-4 py-1.5 text-sm font-medium mb-4">
          <span>✨</span>
          <span>Ingyenes és kötelezettségmentes</span>
        </div>
        <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-3">
          Kérjen személyre szabott ajánlatot
        </h1>
        <p class="text-gray-600">
          Töltse ki a rövid kérdőívet és szakértőink 1 munkanapon belül felveszik Önnel a kapcsolatot.
        </p>
      </div>

      <!-- Trust badges -->
      <div class="flex flex-wrap items-center justify-center gap-4 md:gap-8 mb-10 text-sm text-gray-500">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-pink-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
          </svg>
          <span>2 év garancia</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-pink-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span>2 hét szállítás</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-pink-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4.26 10.147a60.436 60.436 0 00-.491 6.347A48.627 48.627 0 0112 20.904a48.627 48.627 0 018.232-4.41 60.46 60.46 0 00-.491-6.347m-15.482 0a50.57 50.57 0 00-2.658-.813A59.905 59.905 0 0112 3.493a59.902 59.902 0 0110.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.697 50.697 0 0112 13.489a50.702 50.702 0 017.74-3.342M6.75 15a.75.75 0 100-1.5.75.75 0 000 1.5zm0 0v-3.675A55.378 55.378 0 0112 8.443m-7.007 11.55A5.981 5.981 0 006.75 15.75v-1.5" />
          </svg>
          <span>Ingyenes betanítás</span>
        </div>
      </div>

      <!-- Wizard -->
      <ConsultationWizard product={product} />

      <!-- Alternative contact -->
      <div class="mt-12 text-center">
        <p class="text-gray-500 mb-3">Inkább telefonon egyeztetne?</p>
        <a
          href={`tel:${CONTACT.phone}`}
          class="inline-flex items-center gap-2 text-lg font-semibold text-pink-600 hover:text-pink-700 transition-colors"
        >
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          {CONTACT.phoneDisplay}
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

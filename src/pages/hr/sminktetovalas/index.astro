---
import CategoryLayout from '../../../layouts/CategoryLayout.astro';
import { getCollection } from 'astro:content';

const category = {
  name: 'MAST PMU uredaji',
  nameShort: 'PMU uredaji',
  slug: 'sminktetovalas',
  description: 'Zicani i bezicni uredaji za trajnu sminku i pribor.',
  heroDescription: 'Profesionalni PMU uredaji za tetoviranje obrva, usana i kapaka. Precizne linije, tihi motor, ergonomski dizajn.',
  badge: 'Izbor PMU strucnjaka',
  color: 'pink',
};

const products = await getCollection('products', ({ data }) => {
  return data.categorySlug === 'sminktetovalas';
});
---

<CategoryLayout category={category} products={products} />

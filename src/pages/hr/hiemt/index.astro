---
import CategoryLayout from '../../../layouts/CategoryLayout.astro';
import { getCollection } from 'astro:content';

const category = {
  name: 'HIEMT uredaji za oblikovanje tijela',
  nameShort: 'HIEMT',
  slug: 'hiemt',
  description: 'EMS i RF tehnologija za oblikovanje tijela, izgradnju misica i sagorijevanje masti.',
  heroDescription: 'Revolucionarna HIFEM tehnologija: izgradnja misica i sagorijevanje masti u jednom tretmanu. 30 min = 20.000 kontrakcija misica. Neinvazivno oblikovanje tijela bez operacije.',
  badge: 'Nova kategorija',
  color: 'orange',
};

const products = await getCollection('products', ({ data }) => {
  return data.categorySlug === 'hiemt';
});
---

<CategoryLayout category={category} products={products} />

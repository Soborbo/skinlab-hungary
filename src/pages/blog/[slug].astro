---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { CONTACT } from '../../lib/constants';

export async function getStaticPaths() {
  const posts = await getCollection('blog');

  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

// Get related posts (same tags, excluding current)
const allPosts = await getCollection('blog');
const relatedPosts = allPosts
  .filter((p) => p.slug !== post.slug)
  .filter((p) => p.data.tags?.some((tag) => post.data.tags?.includes(tag)))
  .slice(0, 3);

// Format date in Hungarian
const formatDate = (date: Date) => {
  return date.toLocaleDateString('hu-HU', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
};

// BlogPosting schema
const blogSchema = {
  '@context': 'https://schema.org',
  '@type': 'BlogPosting',
  headline: post.data.title,
  description: post.data.description,
  author: {
    '@type': 'Organization',
    name: post.data.author || 'SkinLab',
  },
  publisher: {
    '@type': 'Organization',
    name: 'Skinlab Beauty Equipment Kft.',
    url: 'https://skinlabhungary.hu',
  },
  datePublished: post.data.publishedAt.toISOString(),
  dateModified: (post.data.updatedAt || post.data.publishedAt).toISOString(),
  image: post.data.image,
  mainEntityOfPage: {
    '@type': 'WebPage',
    '@id': `https://skinlabhungary.hu/blog/${post.slug}`,
  },
};
---

<BaseLayout
  title={post.data.title}
  description={post.data.description}
  image={post.data.image}
  schema={blogSchema}
>
  <div id="main-content">

    <!-- Breadcrumb -->
    <nav class="bg-gray-50 py-3 border-b border-gray-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <ol class="flex items-center text-sm text-gray-600">
          <li>
            <a href="/" class="hover:text-primary-600">Főoldal</a>
          </li>
          <li class="mx-2">/</li>
          <li>
            <a href="/blog" class="hover:text-primary-600">Blog</a>
          </li>
          <li class="mx-2">/</li>
          <li class="text-gray-900 font-medium truncate">{post.data.title}</li>
        </ol>
      </div>
    </nav>

    <!-- Article -->
    <article class="py-12 lg:py-16">
      <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">

        <!-- Header -->
        <header class="mb-8">
          <!-- Tags -->
          {post.data.tags && post.data.tags.length > 0 && (
            <div class="flex flex-wrap gap-2 mb-4">
              {post.data.tags.map((tag) => (
                <span class="text-sm font-medium text-primary-600 bg-primary-50 px-3 py-1 rounded-full">
                  {tag}
                </span>
              ))}
            </div>
          )}

          <h1 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
            {post.data.title}
          </h1>

          <p class="text-xl text-gray-600 mb-6">
            {post.data.description}
          </p>

          <!-- Meta -->
          <div class="flex items-center gap-4 text-gray-500">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              <span>{post.data.author}</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <span>{formatDate(post.data.publishedAt)}</span>
            </div>
          </div>
        </header>

        <!-- Featured image -->
        {post.data.image && (
          <div class="aspect-[16/9] bg-gray-100 rounded-2xl mb-8 overflow-hidden">
            <img
              src={post.data.image}
              alt={post.data.title}
              class="w-full h-full object-cover"
            />
          </div>
        )}

        <!-- Content -->
        <div class="prose prose-gray prose-lg max-w-none">
          <Content />
        </div>

        <!-- Share -->
        <div class="mt-12 pt-8 border-t border-gray-200">
          <p class="text-gray-600 mb-4">Oszd meg a cikket:</p>
          <div class="flex gap-3">
            <a
              href={`https://www.facebook.com/sharer/sharer.php?u=https://skinlabhungary.hu/blog/${post.slug}`}
              target="_blank"
              rel="noopener noreferrer"
              class="p-3 bg-gray-100 rounded-xl hover:bg-gray-200 transition-colors"
              aria-label="Megosztás Facebookon"
            >
              <svg class="w-5 h-5 text-gray-600" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
            <a
              href={`https://twitter.com/intent/tweet?url=https://skinlabhungary.hu/blog/${post.slug}&text=${encodeURIComponent(post.data.title)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="p-3 bg-gray-100 rounded-xl hover:bg-gray-200 transition-colors"
              aria-label="Megosztás Twitteren"
            >
              <svg class="w-5 h-5 text-gray-600" fill="currentColor" viewBox="0 0 24 24">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            </a>
            <a
              href={`https://www.linkedin.com/shareArticle?mini=true&url=https://skinlabhungary.hu/blog/${post.slug}&title=${encodeURIComponent(post.data.title)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="p-3 bg-gray-100 rounded-xl hover:bg-gray-200 transition-colors"
              aria-label="Megosztás LinkedInen"
            >
              <svg class="w-5 h-5 text-gray-600" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
          </div>
        </div>

      </div>
    </article>

    <!-- Related posts -->
    {relatedPosts.length > 0 && (
      <section class="py-12 lg:py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-8">Kapcsolódó cikkek</h2>

          <div class="grid md:grid-cols-3 gap-8">
            {relatedPosts.map((relatedPost) => (
              <a href={`/blog/${relatedPost.slug}`} class="group">
                <div class="aspect-[16/9] bg-gray-100 rounded-2xl mb-4 overflow-hidden">
                  {relatedPost.data.image ? (
                    <img
                      src={relatedPost.data.image}
                      alt={relatedPost.data.title}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                      loading="lazy"
                    />
                  ) : (
                    <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-primary-100 to-primary-200">
                      <svg class="w-12 h-12 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                      </svg>
                    </div>
                  )}
                </div>
                <h3 class="font-semibold text-gray-900 group-hover:text-primary-600 transition-colors line-clamp-2">
                  {relatedPost.data.title}
                </h3>
              </a>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Back link -->
    <section class="py-8 bg-white border-t border-gray-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <a href="/blog" class="inline-flex items-center text-primary-600 font-medium hover:text-primary-700">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Vissza a bloghoz
        </a>
      </div>
    </section>

  </div>
</BaseLayout>

<style>
  .prose h2 {
    @apply text-2xl font-bold text-gray-900 mt-10 mb-4;
  }
  .prose h3 {
    @apply text-xl font-semibold text-gray-900 mt-8 mb-3;
  }
  .prose p {
    @apply text-gray-600 mb-4 leading-relaxed;
  }
  .prose ul, .prose ol {
    @apply text-gray-600 mb-4 space-y-2;
  }
  .prose li {
    @apply ml-4;
  }
  .prose ul li {
    @apply list-disc;
  }
  .prose ol li {
    @apply list-decimal;
  }
  .prose strong {
    @apply text-gray-900;
  }
  .prose a {
    @apply text-primary-600 hover:underline;
  }
  .prose table {
    @apply w-full border-collapse my-6;
  }
  .prose th, .prose td {
    @apply border border-gray-200 px-4 py-2 text-left;
  }
  .prose th {
    @apply bg-gray-50 font-semibold;
  }
  .prose blockquote {
    @apply border-l-4 border-primary-500 pl-4 italic text-gray-600 my-6;
  }
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
